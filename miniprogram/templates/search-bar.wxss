/* templates/search-bar.wxss */
.search-bar-wrapper {
  display: flex;
  align-items: center;
  background: var(--card-background-color);
  border-radius: 24rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.search-bar-wrapper:focus-within {
  border-color: var(--primary-color);
  box-shadow: 0 4rpx 20rpx rgba(44, 95, 45, 0.2);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  opacity: 0.5;
  transition: opacity 0.3s ease;
}

.search-bar-wrapper:focus-within .search-icon {
  opacity: 1;
}

.search-input {
  flex-grow: 1;
  font-size: 28rpx;
}