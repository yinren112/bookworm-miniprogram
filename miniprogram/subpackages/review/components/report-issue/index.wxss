.report-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity var(--duration-normal) var(--ease-standard), visibility var(--duration-normal) var(--ease-standard);
}

.report-overlay.visible {
  opacity: 1;
  visibility: visible;
}

.report-modal {
  width: 100%;
  background: var(--color-bg-card);
  border-radius: 32rpx 32rpx 0 0;
  border: var(--border-thick) solid var(--color-border);
  padding: var(--space-8);
  padding-bottom: calc(var(--space-8) + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: transform var(--duration-normal) var(--ease-standard);
  max-height: 85vh;
  overflow-y: auto;
}

.report-overlay.visible .report-modal {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-8);
}

.modal-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.close-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  border: var(--border-thick) solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-bg-card);
}

.close-btn text {
  font-size: var(--font-size-md);
  color: var(--color-text-light);
}

.reason-section {
  margin-bottom: var(--space-8);
}

.section-label {
  display: block;
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
  margin-bottom: var(--space-4);
}

.reason-options {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-4);
}

.reason-item {
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
  padding: 16rpx 24rpx;
  background: var(--color-bg-card);
  border: var(--border-thick) solid var(--color-border);
  border-radius: var(--radius-pill);
}

.reason-item.selected {
  border-color: var(--color-juicy-green);
}

.reason-label {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-main);
}

.reason-item.selected .reason-label {
  color: var(--color-juicy-green);
}

.message-section {
  margin-bottom: var(--space-8);
  position: relative;
}

.message-input {
  width: 100%;
  min-height: 160rpx;
  max-height: 300rpx;
  background: var(--color-bg-card);
  border: var(--border-thick) solid var(--color-border);
  border-radius: var(--radius-card);
  padding: 20rpx;
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-main);
  box-sizing: border-box;
  line-height: 1.5;
}

.message-input::placeholder {
  color: var(--color-text-muted);
}

.char-count {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-muted);
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: var(--color-juicy-green);
  color: #FFFFFF;
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  border-radius: var(--radius-btn);
  /* Use full height fill for lip like juicy-button to avoid corners */
  position: relative;
  border: none;
  overflow: hidden;
}

.submit-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--color-juicy-green-shade);
  border-radius: var(--radius-btn);
  z-index: 1;
}

.submit-btn text {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: calc(100% - var(--lip-md));
  background: var(--color-juicy-green);
  border-radius: var(--radius-btn);
}

.submit-btn:active text {
  transform: translateY(var(--lip-md));
  height: 100%; /* Fill space when pressed */
}

.submit-btn::after {
  border: none;
}

/* Remove old active styles */
.submit-btn:active {
  transform: none;
  border-bottom-width: 0;
  margin-bottom: 0;
  margin-top: 0;
}

.submit-btn.disabled {
  opacity: 0.45;
}

.tip-text {
  margin-top: var(--space-4);
  text-align: center;
}

.tip-text text {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-muted);
}
