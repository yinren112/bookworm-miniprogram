page {
  background: var(--color-bg-soft);
}

.container {
  padding: var(--space-6);
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
  animation: pageFadeIn 0.3s var(--ease-out-expo) both;
}

.page-header {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  padding: 0 var(--space-2);
}

.page-title {
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.page-subtitle {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-light);
}

.cheatsheet-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.item-row {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  padding: var(--space-1) 0;
}

.item-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-round);
  border: 2rpx solid var(--color-border);
  background: var(--color-bg-soft);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
  flex: 0 0 auto;
  font-size: var(--font-size-lg);
}

.item-icon--image { color: var(--color-juicy-blue-shade); background: var(--color-bg-info); }
.item-icon--pdf { color: var(--color-juicy-red-shade); background: var(--color-bg-danger); }
.item-icon--link { color: var(--color-juicy-green-shade); background: var(--color-bg-success); }
.item-icon--note { color: var(--color-juicy-yellow-shade); background: var(--color-bg-warn); }

.item-content {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.item-title {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.item-meta {
  display: flex;
  gap: var(--space-2);
  flex-wrap: wrap;
}

.item-actions {
  width: 160rpx;
  flex: 0 0 auto;
}

.footer-tip {
  text-align: center;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-muted);
  padding: var(--space-4) 0;
}
