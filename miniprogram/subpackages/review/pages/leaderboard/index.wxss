page {
  background: var(--color-bg-soft);
}

.container {
  padding: var(--space-6);
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

.my-head {
  display: flex;
  justify-content: space-between;
  gap: var(--space-4);
  margin-bottom: var(--space-6);
}

.list-header {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  padding: 0 var(--space-2);
}

.list-title {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--color-text-main);
  letter-spacing: -1rpx;
}

.list-subtitle {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--color-text-light);
  opacity: 0.8;
}

.leaderboard-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.rank-row {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  padding: var(--space-1) 0;
}

.user {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  flex: 1;
  overflow: hidden;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: var(--radius-round);
  border: var(--border-thin) solid var(--color-border);
  background: var(--color-bg-card);
  flex: 0 0 auto;
}

.user-name {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-main);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.stats {
  display: inline-flex;
  gap: var(--space-2);
  flex: 0 0 auto;
}

.rank-item.is-me {
  background-color: var(--color-bg-info) !important;
  border-color: var(--color-juicy-blue) !important;
}

.footer-tip {
  text-align: center;
  color: var(--color-text-muted);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  padding: var(--space-4) 0;
}
