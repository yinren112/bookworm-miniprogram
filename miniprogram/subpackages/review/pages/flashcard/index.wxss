page {
  background: var(--color-bg-soft);
}

.container {
  padding: var(--space-8);
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

.progress-header {
  margin-bottom: var(--space-4);
}

.progress-meta {
  margin-top: var(--space-3);
  display: flex;
  justify-content: center;
  gap: var(--space-4);
}

.flash-boundary__extra {
  margin-top: var(--space-6);
  display: flex;
  justify-content: center;
}

.card-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: var(--space-6) 0;
  /* Add subtle float animation context */
}

.star-btn {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 10;
}

.star-hit {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  border: var(--border-thick) solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-bg-card);
  box-sizing: border-box;
}

.star-hit.starred {
  border-color: var(--color-juicy-yellow-shade);
}

.star-icon {
  width: 44rpx;
  height: 44rpx;
}

.card-container {
  width: 100%;
  max-width: 640rpx;
}

/* Make card background slightly off-white for better contrast */
.card-face {
  min-height: 560rpx;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
  background: var(--color-bg-card); 
}

.card-label {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  border: var(--border-thick) solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
}

.card-content {
  flex: 1;
  overflow: hidden;
}

.card-hint {
  text-align: center;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-muted);
}

.card-stack {
  position: relative;
  perspective: 1500rpx;
}

.face-front,
.face-back {
  backface-visibility: hidden;
  transform-style: preserve-3d;
}

.card-stack.is-flipped .face-front {
  opacity: 0;
  transform: rotateY(-180deg);
}

.card-stack.is-flipped .face-back {
  opacity: 1;
  transform: rotateY(0);
}

.face-front {
  opacity: 1;
  transform: rotateY(0);
  transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  position: relative;
  z-index: 2;
}

.face-back {
  opacity: 0;
  transform: rotateY(180deg);
  transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
}

.swipe-indicator {
  position: absolute;
  top: var(--space-10);
  padding: var(--space-4) var(--space-8);
  border-radius: var(--radius-card);
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  opacity: 0;
  pointer-events: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: scale(0.8);
  transition: transform var(--duration-normal) var(--ease-standard), opacity var(--duration-normal) var(--ease-standard);
  z-index: 100;
}

.swipe-indicator.visible {
  transform: scale(1);
}

.fuzzy-overlay {
  right: var(--space-10);
  color: var(--color-juicy-yellow-shade);
  background: var(--color-bg-warn);
  border: var(--border-thick) solid var(--color-juicy-yellow);
}

.forgot-overlay {
  right: var(--space-10);
  color: var(--color-juicy-red-shade);
  background: var(--color-bg-danger);
  border: var(--border-thick) solid var(--color-juicy-red);
}

.knew-overlay {
  left: var(--space-10);
  color: var(--color-juicy-green-shade);
  background: var(--color-bg-success);
  border: var(--border-thick) solid var(--color-juicy-green);
}

.perfect-overlay {
  left: var(--space-10);
  color: var(--color-juicy-blue-shade);
  background: var(--color-bg-info);
  border: var(--border-thick) solid var(--color-juicy-blue);
}

.feedback-zone {
  padding: var(--space-6) 0;
}

.feedback-buttons {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-4);
}

.feedback-btn-content {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
}

.flip-hint {
  text-align: center;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-muted);
  padding: var(--space-2) 0;
}

.report-btn-wrapper {
  padding: var(--space-4) 0;
  display: flex;
  justify-content: center;
}

.report-btn {
  border-radius: var(--radius-pill);
  border: var(--border-thick) solid var(--color-border);
  padding: 12rpx 24rpx;
  background: var(--color-bg-card);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
}
