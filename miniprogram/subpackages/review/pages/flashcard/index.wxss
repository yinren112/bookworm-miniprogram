/* 卡片复习页 - Light Clay Design */

.container {
  padding: 32rpx;
  min-height: 100vh;
  background: var(--bg-primary, #F3FBF6);
  display: flex;
  flex-direction: column;
}

/* 进度条 - Minimalist */
.progress-bar {
  height: 6rpx;
  background: rgba(44, 95, 45, 0.1);
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  width: 60%;
  align-self: center;
}

.progress-fill {
  height: 100%;
  background: #2c5f2d;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 24rpx;
  color: #8FA396;
  margin-bottom: 32rpx;
  font-weight: 500;
}

/* 卡片容器 - Enhanced 3D */
.card-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  perspective: 1200px; /* Deeper perspective */
  padding: 24rpx 0;
  margin-bottom: 48rpx;
}

.card-container {
  width: 100%;
  max-width: 620rpx;
  height: 540rpx; /* Slightly Taller */
  position: relative;
  transform-style: preserve-3d;
  transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275); /* Bouncy flip */
}

.card-container.flipped {
  transform: rotateY(180deg);
}

/* 卡片公共样式 */
.card {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  display: flex;
  flex-direction: column;
  padding: 48rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  border-radius: 32rpx; /* Standardized to 32rpx */
  /* Standard Light Clay Shadow */
  box-shadow: 
    16rpx 16rpx 32rpx rgba(44, 95, 45, 0.08),
    -8rpx -8rpx 20rpx rgba(255, 255, 255, 1),
    inset 2rpx 2rpx 4rpx rgba(44, 95, 45, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

/* 正面卡片 */
.card-front {
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFCFB 100%);
  z-index: 2;
}

/* 背面卡片 */
.card-back {
  background: linear-gradient(135deg, #F1F8F4 0%, #FFFFFF 100%);
  transform: rotateY(180deg);
  z-index: 1;
}

.card-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #B8C4BC;
  margin-bottom: 32rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  text-align: center;
}

.card-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow-y: auto;
}

.card-text {
  font-size: 38rpx;
  font-weight: 500;
  color: #2C3E35;
  line-height: 1.6;
  text-align: center;
  white-space: pre-wrap;
}

.card-hint {
  text-align: center;
  font-size: 24rpx;
  color: #B8C4BC;
  margin-top: 32rpx;
}

/* 反馈按钮 - Pill Shapes */
.feedback-buttons {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  padding: 32rpx 0;
  animation: slideUp 0.4s ease-out;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(30rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.feedback-btn {
  width: 140rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx; /* Pill shape */
  border: none;
  background: #FFFFFF;
  /* Soft clay shadow for buttons */
  box-shadow: 
    6rpx 6rpx 16rpx rgba(44, 95, 45, 0.12), 
    -4rpx -4rpx 12rpx rgba(255, 255, 255, 0.8),
    inset 0 0 0 1rpx rgba(255,255,255,0.4);
  transition: all 0.2s ease;
  padding: 0;
}

.feedback-btn::after { border: none; }

.feedback-btn:active {
  transform: scale(0.95);
  box-shadow: inset 2rpx 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.btn-emoji {
  font-size: 36rpx;
  margin-bottom: 4rpx;
  line-height: 1;
}

.btn-label {
  font-size: 22rpx;
  font-weight: 600;
}

/* 按钮颜色配置 */
.feedback-btn.forgot { background: #FFEBEE; color: #E53935; }
.feedback-btn.fuzzy { background: #FFF3E0; color: #FB8C00; }
.feedback-btn.knew { background: #E8F5E9; color: #43A047; }
.feedback-btn.perfect { background: #E3F2FD; color: #1E88E5; }

/* 翻转提示 */
.flip-hint {
  text-align: center;
  padding: 32rpx 0;
  font-size: 28rpx;
  color: #B8C4BC;
}

/* 加载 & 完成状态 */
.loading-state, .empty-state, .complete-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
}

.loading-text, .empty-text {
  font-size: 28rpx;
  color: #8FA396;
}

.complete-icon { font-size: 100rpx; margin-bottom: 24rpx; }
.complete-title { font-size: 40rpx; font-weight: 700; color: #2C3E35; margin-bottom: 12rpx; }
.complete-desc { font-size: 28rpx; color: #8FA396; margin-bottom: 32rpx; }

.complete-stats {
  background: rgba(44, 95, 45, 0.05);
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  color: #2c5f2d;
  font-weight: 600;
  margin-bottom: 48rpx;
}

.back-btn {
  width: 400rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #2c5f2d 0%, #467a48 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(44, 95, 45, 0.2);
}
.back-btn::after { border: none; }

/* 纠错按钮 */
.report-btn-wrapper {
  padding: 24rpx 0;
  text-align: center;
}
.report-btn {
  display: inline-block;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #B8C4BC;
}

