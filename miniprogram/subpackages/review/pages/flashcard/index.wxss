page {
  background: var(--color-bg-soft);
}

.container {
  padding: var(--space-6);
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
  animation: pageFadeIn 0.3s var(--ease-out-expo) both;
}

.progress-header {
  margin-bottom: var(--space-4);
}

.progress-meta {
  margin-top: var(--space-3);
  display: flex;
  justify-content: center;
  gap: var(--space-4);
}

.flash-boundary__extra {
  margin-top: var(--space-6);
  display: flex;
  justify-content: center;
}

.card-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: var(--space-6) 0;
  /* Add subtle float animation context */
}

.star-btn {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 10;
}

.star-hit {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  border: 2rpx solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-bg-card);
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}

.star-hit.starred {
  border-color: var(--color-juicy-yellow-shade);
}

.star-icon {
  width: 44rpx;
  height: 44rpx;
}

.card-container {
  width: 100%;
  max-width: 640rpx;
}

/* Make card background slightly off-white for better contrast */
.card-face {
  min-height: 560rpx;
  max-height: 66vh;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
  background: var(--color-bg-card); 
}

.card-label {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  border: 2rpx solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
  background: var(--color-bg-soft);
}

.card-content {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
}

.card-hint {
  text-align: center;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-muted);
}

.card-stack {
  position: relative;
  perspective: 1500rpx;
}

.face-front,
.face-back {
  backface-visibility: hidden;
  transform-style: preserve-3d;
}

.card-stack.is-flipped .face-front {
  opacity: 0;
  transform: rotateY(-180deg);
}

.card-stack.is-flipped .face-back {
  opacity: 1;
  transform: rotateY(0);
}

.face-front {
  opacity: 1;
  transform: rotateY(0);
  transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  position: relative;
  z-index: 2;
}

.face-back {
  opacity: 0;
  transform: rotateY(180deg);
  transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
}

.swipe-indicator {
  position: absolute;
  top: var(--space-10);
  padding: var(--space-4) var(--space-8);
  border-radius: var(--radius-card);
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  opacity: 0;
  pointer-events: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: scale(0.8);
  transition: transform var(--duration-normal) var(--ease-standard), opacity var(--duration-normal) var(--ease-standard);
  z-index: 100;
}

.swipe-indicator.visible {
  transform: scale(1);
}

.fuzzy-overlay {
  right: var(--space-10);
  color: var(--color-juicy-yellow-shade);
  background: var(--color-bg-warn);
  border: 2rpx solid var(--color-juicy-yellow);
}

.forgot-overlay {
  right: var(--space-10);
  color: var(--color-juicy-red-shade);
  background: var(--color-bg-danger);
  border: 2rpx solid var(--color-juicy-red);
}

.knew-overlay {
  left: var(--space-10);
  color: var(--color-juicy-green-shade);
  background: var(--color-bg-success);
  border: 2rpx solid var(--color-juicy-green);
}

.perfect-overlay {
  left: var(--space-10);
  color: var(--color-juicy-blue-shade);
  background: var(--color-bg-info);
  border: 2rpx solid var(--color-juicy-blue);
}

.feedback-zone {
  padding: var(--space-6) 0;
}

.feedback-buttons {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-4);
}

.feedback-btn-content {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
}

.flip-hint {
  text-align: center;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-muted);
  padding: var(--space-2) 0;
}

.report-btn-wrapper {
  padding: var(--space-4) 0;
  display: flex;
  justify-content: center;
}

.report-btn {
  border-radius: var(--radius-pill);
  border: 2rpx solid var(--color-border);
  padding: 12rpx 24rpx;
  background: var(--color-bg-soft);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
}

/* Card Transition Animation (on card-stack, not card-container which WXS controls) */
@keyframes cardEnter {
  0% { opacity: 0; transform: translateY(18rpx) scale(0.985); }
  100% { opacity: 1; transform: translateY(0) scale(1); }
}

.card-stack.card-entering {
  animation: cardEnter 220ms cubic-bezier(0.22, 1, 0.36, 1) both;
}

@keyframes cardSwipeExitLeft {
  0% { opacity: 1; transform: translateX(0) rotate(0deg) scale(1); }
  100% { opacity: 0.06; transform: translateX(-88rpx) rotate(-8deg) scale(0.98); }
}

@keyframes cardSwipeExitRight {
  0% { opacity: 1; transform: translateX(0) rotate(0deg) scale(1); }
  100% { opacity: 0.06; transform: translateX(88rpx) rotate(8deg) scale(0.98); }
}

.card-stack.card-swipe-exit-left {
  animation: cardSwipeExitLeft 180ms cubic-bezier(0.22, 1, 0.36, 1) both;
}

.card-stack.card-swipe-exit-right {
  animation: cardSwipeExitRight 180ms cubic-bezier(0.22, 1, 0.36, 1) both;
}

@media (prefers-reduced-motion: reduce) {
  .card-stack.card-entering {
    animation: none;
  }

  .card-stack.card-swipe-exit-left,
  .card-stack.card-swipe-exit-right {
    animation: none;
  }
}

/* Swipe Tutorial Overlay */
.swipe-hint-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: hintFadeIn 0.3s var(--ease-out-expo) both;
}

@keyframes hintFadeIn {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

.swipe-tutorial {
  width: 620rpx;
  background: var(--color-bg-card);
  border-radius: 48rpx;
  padding: 48rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-6);
  text-align: center;
}

.tutorial-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.tutorial-sub {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
  line-height: 1.5;
}

.tutorial-levels {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

.tutorial-row {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.tutorial-direction {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
}

.tutorial-items {
  display: flex;
  gap: var(--space-3);
}

.tutorial-item {
  flex: 1;
  padding: 20rpx 16rpx;
  border-radius: var(--radius-md);
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  align-items: center;
}

.tutorial-item.forgot {
  background: var(--color-bg-danger);
  border: 2rpx solid var(--color-juicy-red);
}
.tutorial-item.fuzzy {
  background: var(--color-bg-warn);
  border: 2rpx solid var(--color-juicy-yellow);
}
.tutorial-item.knew {
  background: var(--color-bg-success);
  border: 2rpx solid var(--color-juicy-green);
}
.tutorial-item.perfect {
  background: var(--color-bg-info);
  border: 2rpx solid var(--color-juicy-blue);
}

.tutorial-label {
  font-size: 20rpx;
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.tutorial-name {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

/* Undo Bar */
.undo-bar {
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom) + 32rpx);
  left: var(--space-6);
  right: var(--space-6);
  z-index: 100;
  animation: undoSlideUp 0.25s var(--ease-out-expo) both;
}

.undo-bar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 36rpx;
  border-radius: var(--radius-card);
  background: var(--color-text-main);
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.18);
}

.undo-bar-text {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-inverse);
}

.undo-btn {
  padding: 14rpx 32rpx;
  border-radius: var(--radius-pill);
  background: rgba(255,255,255,0.2);
}

.undo-btn text {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-inverse);
}

@keyframes undoSlideUp {
  0% { opacity: 0; transform: translateY(24rpx); }
  100% { opacity: 1; transform: translateY(0); }
}

/* Pending Complete State */
.pending-complete {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: pageFadeIn 0.3s var(--ease-out-expo) both;
}

.pending-complete-inner {
  text-align: center;
}

.pending-complete-text {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
}

/* Inline Swipe Tip (count-based, non-blocking) */
.swipe-tip {
  text-align: center;
  padding: var(--space-2) 0;
  animation: hintFadeIn 0.3s var(--ease-out-expo) both;
}
.swipe-tip text {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-muted);
}
