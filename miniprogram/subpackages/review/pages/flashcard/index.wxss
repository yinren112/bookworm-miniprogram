/* subpackages/review/pages/flashcard/index.wxss */
/* 卡片复习页 - Light Clay Design */

.container {
  padding: 32rpx;
  min-height: 100vh;
  box-sizing: border-box; /* Ensure padding doesn't overflow */
  background: var(--bg-primary, #F3FBF6);
  display: flex;
  flex-direction: column;
}

/* 进度条 - Minimalist */
.progress-bar {
  height: 6rpx;
  background: rgba(44, 95, 45, 0.1);
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  width: 60%;
  align-self: center;
  flex-shrink: 0;
}

.progress-fill {
  height: 100%;
  background: #2c5f2d;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 24rpx;
  color: #8FA396;
  margin-bottom: 24rpx;
  font-weight: 500;
  flex-shrink: 0;
}

/* 卡片容器 - Enhanced 3D */
.card-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  perspective: 1200px;
  padding: 24rpx 0;
  margin-bottom: 24rpx;
  position: relative;
  /* Ensure it takes space but leaves room for bottom zone */
}

/* Star Button */
.star-btn {
  position: absolute;
  top: 0;
  right: 40rpx;
  z-index: 10;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.45); /* Glass-like */
  backdrop-filter: blur(8rpx); /* Glass effect */
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1); /* Bouncy pop */
}

.star-btn:active {
  transform: scale(0.9);
}

.star-btn.starred {
  background: #FFF3E0;
}

.star-icon {
  font-size: 40rpx;
  color: #B8C4BC;
  transition: color 0.3s;
}

.star-btn.starred .star-icon {
  color: #FFB300;
}

/* Card Container */
.card-container {
  width: 100%;
  max-width: 600rpx;
  height: 65vh; /* Responsive height */
  max-height: 800rpx;
  position: relative;
  transform-style: preserve-3d;
  /* transition handled in JS or via class */
}

/* Reset animation for return to center */
.reset-anim {
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

/* Swipe exit animation */
.swipe-anim {
    transition: transform 0.3s ease-out, opacity 0.3s ease-out;
}

.card-container.flipped {
  /* This is now handled by inline transform logic if JS is active, 
     but keeping it for reference/fallback if we just tap */
  transform: rotateY(180deg);
}

/* 卡片公共样式 */
.card {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  display: flex;
  flex-direction: column;
  padding: 48rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 
    16rpx 16rpx 32rpx rgba(44, 95, 45, 0.08),
    -8rpx -8rpx 20rpx rgba(255, 255, 255, 1),
    inset 2rpx 2rpx 4rpx rgba(44, 95, 45, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.card-front {
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFCFB 100%);
  z-index: 2;
}

.card-back {
  background: linear-gradient(135deg, #F1F8F4 0%, #FFFFFF 100%);
  transform: rotateY(180deg);
  z-index: 1;
}

/* Swipe Overlay Indicators - 4 Levels */
.swipe-indicator {
  position: absolute;
  top: 40rpx;
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  border: 4rpx solid;
  font-size: 40rpx;
  font-weight: bold;
  opacity: 0;
  z-index: 10;
  pointer-events: none;
  transition: opacity 0.1s ease;
}

/* Left side indicators (negative swipe) */
.fuzzy-overlay {
  right: 40rpx;
  border-color: #FB8C00;
  color: #FB8C00;
  background: rgba(255, 243, 224, 0.9);
  transform: rotate(12deg);
}

.forgot-overlay {
  right: 40rpx;
  border-color: #E53935;
  color: #E53935;
  background: rgba(255, 235, 238, 0.9);
  transform: rotate(15deg);
}

/* Right side indicators (positive swipe) */
.knew-overlay {
  left: 40rpx;
  border-color: #43A047;
  color: #43A047;
  background: rgba(232, 245, 233, 0.9);
  transform: rotate(-12deg);
}

.perfect-overlay {
  left: 40rpx;
  border-color: #1E88E5;
  color: #1E88E5;
  background: rgba(227, 242, 253, 0.9);
  transform: rotate(-15deg);
}


.card-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #B8C4BC;
  margin-bottom: 32rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  text-align: center;
}

.card-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow-y: auto;
}

.card-text {
  font-size: 38rpx;
  font-weight: 500;
  color: #2C3E35;
  line-height: 1.6;
  text-align: center;
  white-space: pre-wrap;
}

.card-hint {
  text-align: center;
  font-size: 24rpx;
  color: #B8C4BC;
  margin-top: 32rpx;
}

/* Feedback Zone - Golden Ratio (Bottom 1/3) */
.feedback-zone {
  height: 200rpx; /* approx 1/3 of safe area remainder */
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: env(safe-area-inset-bottom);
  flex-shrink: 0;
}

.feedback-buttons {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  width: 100%;
}

.feedback-btn {
  width: 140rpx;
  height: 120rpx; /* Taller for better touch target */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 60rpx; /* Pill shape */
  border: none;
  background: #FFFFFF;
  box-shadow: 
    8rpx 8rpx 20rpx rgba(44, 95, 45, 0.15), 
    -6rpx -6rpx 16rpx rgba(255, 255, 255, 0.9),
    inset 0 0 0 1rpx rgba(255,255,255,0.4);
  transition: transform 0.1s ease, box-shadow 0.1s ease;
  padding: 0;
}

.feedback-btn::after { border: none; }

.feedback-btn:active {
  transform: scale(0.95);
  box-shadow: inset 2rpx 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.btn-emoji {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  line-height: 1;
}

.btn-label {
  font-size: 22rpx;
  font-weight: 600;
}

/* 按钮颜色配置 */
.feedback-btn.forgot { background: #FFEBEE; color: #E53935; }
.feedback-btn.fuzzy { background: #FFF3E0; color: #FB8C00; }
.feedback-btn.knew { background: #E8F5E9; color: #43A047; }
.feedback-btn.perfect { background: #E3F2FD; color: #1E88E5; }

/* 翻转提示 */
.flip-hint {
  text-align: center;
  padding: 32rpx 0;
  font-size: 28rpx;
  color: #B8C4BC;
  flex-shrink: 0;
}

/* 加载 & 完成状态 */
.loading-state, .empty-state, .complete-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
}

.loading-text, .empty-text {
  font-size: 28rpx;
  color: #8FA396;
}

.complete-icon { font-size: 100rpx; margin-bottom: 24rpx; }
.complete-title { font-size: 40rpx; font-weight: 700; color: #2C3E35; margin-bottom: 12rpx; }
.complete-desc { font-size: 28rpx; color: #8FA396; margin-bottom: 32rpx; }

.complete-stats {
  background: rgba(44, 95, 45, 0.05);
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  color: #2c5f2d;
  font-weight: 600;
  margin-bottom: 48rpx;
}

.back-btn {
  width: 400rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #2c5f2d 0%, #467a48 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(44, 95, 45, 0.2);
}
.back-btn::after { border: none; }

/* 纠错按钮 */
.report-btn-wrapper {
  padding: 12rpx 0;
  text-align: center;
  flex-shrink: 0;
}
.report-btn {
  display: inline-block;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #B8C4BC;
}

