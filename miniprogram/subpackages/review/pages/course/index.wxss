page {
  background: var(--color-bg-soft);
}

.container {
  padding: var(--space-6);
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
  animation: pageFadeIn 0.3s var(--ease-out-expo) both;
}

.course-title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--color-text-main);
  line-height: 1.1;
  letter-spacing: -0.5rpx;
}

.course-desc {
  margin-top: var(--space-3);
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-text-light);
  line-height: 1.5;
}

.course-meta {
  margin-top: var(--space-6);
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: var(--space-4);
  background: var(--color-bg-card);
  padding: 48rpx 32rpx;
  border-radius: var(--radius-md);
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.06);
  border: none;
}

.meta-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-2);
}

.meta-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.8;
}

.meta-value {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.meta-label {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.exam-row {
  margin-top: var(--space-6);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-4);
}

.exam-label {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
}

.exam-picker {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  gap: var(--space-2);
  border-radius: var(--radius-pill);
  border: none;
  background: transparent;
  padding: 0;
}

.exam-value {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
}

.exam-action {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-juicy-blue);
  text-decoration: underline;
}

.exam-clear {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-juicy-red);
}

.queue-header {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-bottom: var(--space-6);
}

.queue-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.queue-stats {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: var(--space-4);
  margin-bottom: var(--space-6);
}

.queue-stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-2);
}

.queue-number {
  font-size: 56rpx;
  font-weight: var(--font-weight-heavy);
  line-height: 1;
}

.queue-number.pending { color: var(--color-juicy-green); }
.queue-number.new { color: var(--color-juicy-blue); }
.queue-number.done { color: var(--color-juicy-yellow-shade); }

.queue-label {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.tool-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: var(--space-4);
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-3);
}

.tool-icon-img {
  width: 64rpx;
  height: 64rpx;
  opacity: 1;
}

.tool-label {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.section-header {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.section-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.unit-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
  margin-top: var(--space-4);
}

.unit-item:active {
  background-color: var(--color-bg-soft);
  transform: scale(0.995);
  transition: all 0.1s;
}

.unit-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-4);
  padding: var(--space-1) 0;
}

.unit-left-group {
  display: flex;
  gap: var(--space-4);
  align-items: center;
  flex: 1;
  overflow: hidden;
}

.unit-info {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  overflow: hidden;
}

.unit-title {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.unit-subtitle {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.unit-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.45;
}
