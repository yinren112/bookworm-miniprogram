page {
  background: var(--color-bg-soft);
}

.page {
  min-height: 100vh;
}

.hist-boundary__extra {
  margin-top: var(--space-6);
  display: flex;
  justify-content: center;
}

.content {
  height: 100vh;
  box-sizing: border-box;
  padding: var(--space-6);
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.history-item {
  margin-bottom: var(--space-4);
  transition: all 0.2s;
}

.history-item.is-active {
  border-color: var(--color-juicy-blue);
  background-color: var(--color-bg-info) !important;
}

.history-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-4);
  padding: var(--space-1) 0;
}

.summary {
  display: flex;
  justify-content: space-between;
  gap: var(--space-4);
}

.summary-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
}

.summary-label {
  font-size: var(--font-size-xs);
  color: var(--color-text-light);
}

.summary-value {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-4);
}

.section-title {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.chart {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  gap: var(--space-2);
  padding: var(--space-2) 0;
}

.chart-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-2);
}

.chart-bar {
  width: 36rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column-reverse;
  border-radius: 12rpx;
  overflow: hidden;
  background: var(--color-border);
}

.seg {
  width: 100%;
}

.seg-card {
  background: var(--color-juicy-green);
}

.seg-quiz {
  background: var(--color-juicy-blue);
}

.seg-cheatsheet {
  background: var(--color-juicy-yellow);
}

.chart-label {
  font-size: var(--font-size-xs);
  color: var(--color-text-light);
}

.legend {
  display: flex;
  gap: var(--space-4);
  padding-top: var(--space-2);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  font-size: var(--font-size-xs);
  color: var(--color-text-light);
}

.legend-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.history-left {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  overflow: hidden;
  padding-left: var(--space-4);
  border-left: 6rpx solid var(--color-border);
}

.history-item.is-active .history-left {
  border-left-color: var(--color-juicy-blue);
}

.history-date {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.history-total {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.history-breakdown {
  font-size: var(--font-size-xs);
  color: var(--color-text-light);
}
