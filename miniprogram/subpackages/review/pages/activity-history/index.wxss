page {
  background: var(--color-bg-soft);
}

.page {
  min-height: 100vh;
}

.hist-boundary__extra {
  margin-top: var(--space-6);
  display: flex;
  justify-content: center;
}

.content {
  height: 100vh;
  box-sizing: border-box;
  padding: var(--space-6);
  display: flex;
  flex-direction: column;
}

/* 概要栏间距 */
.summary-card {
  margin-bottom: var(--space-4);
}

.summary {
  display: flex;
  justify-content: space-between;
  gap: var(--space-4);
}

.summary-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
}

.summary-label {
  font-size: var(--font-size-xs);
  color: var(--color-text-light);
}

.summary-value {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

/* 日历卡片 */
.calendar-card {
  margin-bottom: var(--space-4);
}

/* 月份导航 */
.month-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-4);
}

.month-label {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.month-arrow {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-bg-soft);
}

.month-arrow.disabled {
  opacity: 0.3;
}

.arrow-text {
  font-size: 40rpx;
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
  line-height: 1;
}

/* 星期标题行 */
.weekday-row {
  display: flex;
  margin-bottom: var(--space-2);
}

.weekday-label {
  flex: 1;
  text-align: center;
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

/* 日历网格 */
.calendar-grid {
  display: flex;
  flex-wrap: wrap;
}

.cal-cell {
  width: calc(100% / 7);
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  box-sizing: border-box;
}

.cal-cell--empty {
  background: transparent;
}

.cal-cell--day {
  border-radius: 16rpx;
  transition: all 0.15s ease;
}

/* Level 色块 */
.cal-cell--day.level-0 {
  background: var(--color-heat-0, rgba(0,0,0,0.04));
}

.cal-cell--day.level-1 {
  background: var(--color-heat-1);
}

.cal-cell--day.level-2 {
  background: var(--color-heat-2);
}

.cal-cell--day.level-3 {
  background: var(--color-heat-3);
}

.cal-cell--day.level-4 {
  background: var(--color-heat-4);
}

.cal-day-num {
  font-size: 24rpx;
  font-weight: var(--font-weight-bold);
  color: var(--color-text-main);
  line-height: 1;
}

/* level >= 3 上白色文字 */
.cal-cell--day.level-3 .cal-day-num,
.cal-cell--day.level-4 .cal-day-num {
  color: #fff;
}

/* 今日标记 */
.today-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: var(--color-juicy-green);
  margin-top: 4rpx;
}

.cal-cell--day.level-3 .today-dot,
.cal-cell--day.level-4 .today-dot {
  background: #fff;
}

.cal-cell--day.is-today {
  border: 3rpx solid var(--color-juicy-green);
}

/* 选中态 */
.cal-cell--day.is-selected {
  border: 3rpx solid var(--color-text-main);
  transform: scale(1.08);
  z-index: 2;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.12);
}

/* 展开详情 */
.detail-expand {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.25s ease;
}

.detail-expand.is-open {
  max-height: 300rpx;
}

.detail-inner {
  padding-top: var(--space-4);
  margin-top: var(--space-4);
  border-top: 2rpx solid var(--color-border);
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.detail-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.detail-date {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.detail-total {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.detail-breakdown {
  font-size: var(--font-size-xs);
  color: var(--color-text-muted);
}
