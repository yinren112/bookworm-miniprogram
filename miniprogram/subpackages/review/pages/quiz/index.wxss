page {
  background: var(--color-bg-soft);
}

.container {
  padding: var(--space-6);
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
  animation: pageFadeIn 0.3s var(--ease-out-expo) both;
}

.progress-section {
  margin-bottom: var(--space-2);
}

.progress-meta {
  margin-top: var(--space-3);
  display: flex;
  justify-content: center;
  gap: var(--space-4);
}

.question-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-4);
  margin-bottom: var(--space-6);
}

.question-type {
  display: inline-flex;
  gap: var(--space-2);
  align-items: center;
}

.quiz-boundary__extra {
  margin-top: var(--space-6);
  display: flex;
  justify-content: center;
}

.star-hit {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  border: 2rpx solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-bg-card);
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}

.star-hit.starred {
  border-color: var(--color-juicy-yellow-shade);
}

.star-icon {
  width: 44rpx;
  height: 44rpx;
}

.question-stem {
  margin-bottom: var(--space-6);
}

.options-section {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.option-inner {
  display: flex;
  gap: var(--space-4);
  align-items: flex-start;
}

.option-marker {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  border: 2rpx solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
  flex: 0 0 auto;
}

.option-content {
  flex: 1;
  overflow: hidden;
}

.option-state {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
  border-radius: var(--radius-round);
  border: 2rpx solid var(--color-border);
  flex: 0 0 auto;
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
}

.option-item {
  transition: background-color var(--duration-normal) var(--ease-standard), border-color var(--duration-normal) var(--ease-standard);
}

.option-item.is-selected {
  background-color: var(--color-bg-info) !important;
  border-color: var(--color-juicy-blue) !important;
}

.option-item.is-selected .option-marker {
  border-color: var(--color-juicy-blue);
  color: var(--color-juicy-blue);
  background: var(--color-bg-soft);
}

.option-item.is-correct {
  background-color: var(--color-bg-success) !important;
  border-color: var(--color-juicy-green) !important;
  animation: uiPop var(--duration-normal) var(--ease-bouncy);
}

.option-item.is-correct .option-marker,
.option-item.is-correct .option-state {
  border-color: var(--color-juicy-green);
  color: var(--color-juicy-green);
  background: var(--color-bg-soft);
}

.option-item.is-wrong {
  background-color: var(--color-bg-danger) !important;
  border-color: var(--color-juicy-red) !important;
  animation: uiShake var(--duration-fast) var(--ease-standard) 2;
}

.option-item.is-wrong .option-marker,
.option-item.is-wrong .option-state {
  border-color: var(--color-juicy-red);
  color: var(--color-juicy-red);
  background: var(--color-bg-soft);
}

.fill-blank-section {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.fill-input {
  height: 96rpx;
  border-radius: var(--radius-btn);
  border: 2rpx solid var(--color-border);
  padding: 0 var(--space-6);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  background: var(--color-bg-soft);
  box-sizing: border-box;
}

.fill-input.is-correct {
  border-color: var(--color-juicy-green);
  background-color: var(--color-bg-success);
}

.fill-input.is-wrong {
  border-color: var(--color-juicy-red);
  background-color: var(--color-bg-danger);
}

.result-section {
  margin-top: var(--space-8);
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  background: var(--color-bg-card);
  padding: var(--space-6);
  border-radius: var(--radius-md);
  border: none;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.06);
}

.result-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.result-title.is-correct { color: var(--color-juicy-green); }
.result-title.is-wrong { color: var(--color-juicy-red); }

.explanation-label,
.answer-label {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
  margin-bottom: var(--space-2);
}

.report-btn-wrapper {
  margin-top: var(--space-6);
  display: flex;
  justify-content: center;
}

.report-btn {
  border-radius: var(--radius-pill);
  border: none;
  padding: 12rpx 24rpx;
  background: var(--color-bg-soft);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.06);
}

.action-section {
  margin-top: var(--space-6);
}

/* Auto-advance */
.auto-advance-hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-3);
  padding: var(--space-4) 0;
}

.auto-advance-text {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-juicy-green);
}

.auto-advance-bar-track {
  width: 100%;
  height: 8rpx;
  border-radius: 4rpx;
  background: var(--color-bg-soft);
  overflow: hidden;
}

.auto-advance-bar {
  height: 100%;
  border-radius: 4rpx;
  background: var(--color-juicy-green);
  animation: autoAdvanceShrink 1.2s linear forwards;
}

@keyframes autoAdvanceShrink {
  0% { width: 100%; }
  100% { width: 0%; }
}

/* Quiz multi-choice hint */
.quiz-hint {
  text-align: center;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-muted);
  padding: var(--space-2) 0;
}
