page {
  background: var(--color-bg-soft);
}

.container {
  padding: var(--space-6);
  min-height: 100vh;
  box-sizing: border-box;
}

.content {
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

.header {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  padding: 0 var(--space-2);
}

.title {
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
  line-height: 1.2;
}

.meta {
  display: flex;
  gap: var(--space-2);
  flex-wrap: wrap;
}

.note-body {
  padding: var(--space-2) 0;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}
