/* pages/session-complete/index.wxss */

.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F5E9 0%, #F1F8E9 50%, #FAFAFA 100%);
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 庆祝区域 */
.celebration-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
  animation: fadeInUp 0.5s ease-out;
}

.celebration-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.celebration-title {
  font-size: 52rpx;
  font-weight: 800;
  color: #2E7D32;
  margin-bottom: 12rpx;
}

.celebration-subtitle {
  font-size: 28rpx;
  color: #66BB6A;
}

/* 统计卡片 */
.stats-card {
  width: 100%;
  max-width: 600rpx;
  padding: 36rpx;
  margin-bottom: 32rpx;
  animation: fadeInUp 0.6s ease-out 0.1s both;
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #8FA396;
  margin-bottom: 24rpx;
  text-align: center;
}

.stat-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.06);
}

.stat-row:last-child {
  border-bottom: none;
}

.stat-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.stat-label {
  flex: 1;
  font-size: 28rpx;
  color: #4A5A4E;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #2E7D32;
}

/* 连续学习卡片 */
.streak-card {
  width: 100%;
  max-width: 600rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  animation: fadeInUp 0.6s ease-out 0.2s both;
}

.streak-flame {
  width: 64rpx;
  height: 64rpx;
}

.streak-info {
  flex: 1;
}

.streak-current {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.streak-number {
  font-size: 56rpx;
  font-weight: 800;
  color: #FF9800;
  line-height: 1;
}

.streak-unit {
  font-size: 28rpx;
  color: #FF9800;
}

.streak-label {
  font-size: 24rpx;
  color: #8FA396;
  margin-top: 4rpx;
}

.streak-best {
  font-size: 24rpx;
  color: #B8C4BC;
  padding: 8rpx 16rpx;
  background: rgba(0,0,0,0.04);
  border-radius: 20rpx;
}

/* 操作按钮区域 */
.action-area {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  animation: fadeInUp 0.6s ease-out 0.3s both;
}

.action-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.2s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #43A047 0%, #66BB6A 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(67, 160, 71, 0.3);
}

.action-btn.primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(67, 160, 71, 0.3);
}

.action-btn.secondary {
  background: #fff;
  color: #4A5A4E;
  border: 2rpx solid #E8EBE9;
}

.action-btn.secondary:active {
  background: #F5F7F5;
}

.btn-hint {
  font-size: 22rpx;
  font-weight: 400;
  opacity: 0.8;
  margin-top: 4rpx;
}

/* Clay Card */
.clay-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  box-shadow: 
    6rpx 6rpx 16rpx rgba(0, 0, 0, 0.06),
    -4rpx -4rpx 12rpx rgba(255, 255, 255, 0.8);
}

/* Dark Mode */
@media (prefers-color-scheme: dark) {
  .page {
    background: linear-gradient(180deg, #1A2E1C 0%, #1E3320 50%, #121212 100%);
  }

  .celebration-title {
    color: #A5D6A7;
  }

  .celebration-subtitle {
    color: #81C784;
  }

  .clay-card {
    background: rgba(30, 40, 32, 0.9);
    box-shadow: 
      6rpx 6rpx 16rpx rgba(0, 0, 0, 0.3),
      -4rpx -4rpx 12rpx rgba(60, 80, 65, 0.15);
  }

  .stats-title {
    color: #8FA396;
  }

  .stat-row {
    border-bottom-color: rgba(255,255,255,0.08);
  }

  .stat-label {
    color: #B8C4BC;
  }

  .stat-value {
    color: #A5D6A7;
  }

  .streak-best {
    background: rgba(255,255,255,0.08);
    color: #8FA396;
  }

  .action-btn.secondary {
    background: rgba(30, 40, 32, 0.9);
    color: #B8C4BC;
    border-color: #3A4A3D;
  }

  .action-btn.secondary:active {
    background: rgba(40, 55, 45, 0.9);
  }
}
