page {
  background: var(--color-bg-soft);
}

.page {
  padding: var(--space-6);
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
  position: relative; /* For confetti positioning */
}

.confetti-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 99;
}

.celebration-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: var(--space-6) 0;
}

.celebration-icon {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: var(--space-4);
}

.celebration-title {
  font-size: 56rpx;
  font-weight: 800;
  color: var(--color-text-main);
  letter-spacing: -1rpx;
}

.celebration-subtitle {
  margin-top: var(--space-3);
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text-light);
  opacity: 0.8;
}

.stats-title {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--color-text-main);
  margin-bottom: var(--space-6);
}

.stat-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-4);
}

.stat-item {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  align-items: flex-start;
  background: var(--color-bg-card);
  padding: var(--space-4);
  border-radius: var(--radius-lg);
}

.stat-label {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--color-text-light);
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--color-text-main);
  line-height: 1;
}

.stat-row {
  margin-top: var(--space-4);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.streak-flame {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: var(--space-4);
}

.streak-info {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  align-items: center;
  text-align: center;
}

.streak-number {
  font-size: 64rpx;
  font-weight: var(--font-weight-heavy);
  color: var(--color-juicy-yellow-shade);
  line-height: 1;
}

.streak-unit {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.streak-best {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.action-area {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.shortcut-actions {
  margin-top: var(--space-2);
}

.subscribe-tip {
  text-align: center;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-muted);
  margin-top: var(--space-2);
}
