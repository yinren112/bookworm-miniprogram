page {
  --color-juicy-green: #46B065;
  --color-juicy-green-shade: #008E6B;
  --color-juicy-blue: #1CB0F6;
  --color-juicy-blue-shade: #1899d6;
  --color-juicy-yellow: #FFC800;
  --color-juicy-yellow-shade: #e5b400;
  --color-juicy-red: #FF4B4B;
  --color-juicy-red-shade: #d43636;
  --color-text-main: #1D1D1F;
  --color-text-light: #6B7280;
  --color-border: #F3F4F6;
  --color-border-shade: #E5E5E5;
  --color-bg-page: #FFFFFF;
  --color-bg-card: #FFFFFF;
  --color-bg-soft: #F5F5F7;
  --color-bg-highlight-green: #DCECB5;
  --color-bg-highlight-blue: #E1F5FE;
  --color-text-muted: #737980;
  --color-juicy-green-light: #81C570;
  --color-text-inverse: #FFFFFF;
  --color-bg-success: rgba(70, 176, 101, 0.16);
  --color-bg-info: rgba(28, 176, 246, 0.16);
  --color-bg-warn: rgba(255, 200, 0, 0.18);
  --color-bg-danger: rgba(255, 75, 75, 0.14);
  --color-heat-0: #E5E5E5;
  --color-heat-1: #DCECB5;
  --color-heat-2: #81C570;
  --color-heat-3: #46B065;
  --color-heat-4: #008E6B;
  
  --primary-color: var(--color-juicy-green);
  --background-color: var(--color-bg-page);

  --radius-btn: 36rpx;
  --radius-card: 32rpx;
  --radius-pill: 999rpx;
  --radius-round: 999rpx;
  --radius-lg: 64rpx;
  --radius-md: 32rpx;
  --radius-sm: 16rpx;

  --border-thin: 2rpx;
  --border-thick: 2rpx;

  --shadow-card: 0 4rpx 24rpx rgba(0,0,0,0.06);
  
  --ease-bouncy: cubic-bezier(0.175, 0.885, 0.32, 1.275);
  --ease-standard: cubic-bezier(0.2, 0, 0, 1);
  --ease-out-expo: cubic-bezier(0.19, 1, 0.22, 1);
  --ease-in-out-cubic: cubic-bezier(0.65, 0, 0.35, 1);
  --duration-fast: 120ms;
  --duration-normal: 180ms;
  --duration-slow: 300ms;
  --duration-page: 300ms;
  --duration-overlay: 300ms;
  --duration-list: 240ms;
  --motion-translate-sm: 12rpx;
  --motion-translate-md: 20rpx;
  --motion-scale-inactive: 0.92;
  --motion-scale-active: 1;
  --motion-scale-press: 0.98;

  --space-2: 8rpx;
  --space-1: 4rpx;
  --space-3: 12rpx;
  --space-4: 16rpx;
  --space-5: 20rpx;
  --space-6: 24rpx;
  --space-8: 32rpx;
  --space-10: 40rpx;

  --font-size-xs: 22rpx;
  --font-size-sm: 24rpx;
  --font-size-md: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-2xl: 44rpx;

  --font-weight-regular: 400;
  --font-weight-medium: 600;
  --font-weight-bold: 700;
  --font-weight-heavy: 800;

  font-family: 'Nunito', 'PingFang SC', system-ui, sans-serif;
  color: var(--color-text-main);
  background: var(--color-bg-page);
  line-height: 1.5;
  font-size: var(--font-size-md);
  min-height: 100vh;
}

/* Dark Mode Overrides */
@media (prefers-color-scheme: dark) {
  page {
    --color-bg-page: #111111;
    --color-bg-card: #1C1C1E;
    --color-bg-highlight-green: #1A2E1A;
    --color-bg-highlight-blue: #0F1E2E;
    --color-text-main: #FFFFFF;
    --color-text-light: #9CA3AF;
    --color-border: #2C2C2E;
    --color-border-shade: #232325;
    --color-bg-soft: #161618;
    --color-text-muted: #6B7280;

    --color-bg-success: rgba(70, 176, 101, 0.24);
    --color-bg-info: rgba(28, 176, 246, 0.24);
    --color-bg-warn: rgba(255, 200, 0, 0.24);
    --color-bg-danger: rgba(255, 75, 75, 0.20);

    --color-heat-0: #2C2C2E;
    --color-heat-1: #3A3A3C;
    --color-heat-2: #46B065;
    --color-heat-3: #81C570;
    --color-heat-4: #DCECB5;

    --shadow-card: 0 0 0 1rpx rgba(255,255,255,0.06);

    --color-juicy-green: #81C570;
    --color-juicy-green-shade: #46B065;
    --color-juicy-blue-shade: #127cb0;
  }
}

@keyframes uiShake {
  0% { transform: translateX(0); }
  20% { transform: translateX(-10rpx); }
  40% { transform: translateX(10rpx); }
  60% { transform: translateX(-6rpx); }
  80% { transform: translateX(6rpx); }
  100% { transform: translateX(0); }
}

@keyframes uiPop {
  0% { transform: scale(0.96); opacity: 0.92; }
  100% { transform: scale(1); opacity: 1; }
}

.anim-shake {
  animation: uiShake var(--duration-normal) var(--ease-standard);
  animation-delay: var(--anim-delay, 0ms);
}

.anim-pop {
  animation: uiPop var(--duration-normal) var(--ease-bouncy);
  animation-delay: var(--anim-delay, 0ms);
  animation-fill-mode: both;
}

.hover-pressed {
  transform: scale(var(--motion-scale-press));
}

.item-hover {
  transform: scale(var(--motion-scale-press));
}

.pressable {
  transition: transform var(--duration-fast) var(--ease-out-expo);
  will-change: transform;
}

.anim-pulse {
  animation: uiPulse 2s infinite;
}

@keyframes uiPulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.02); }
  100% { transform: scale(1); }
}

/* Page Activation Animation (for Tab Switch) */
.page-active .content-wrapper,
.page-active .profile-content,
.page-active .header {
  animation: pageActivate 0.4s var(--ease-out-expo) both;
}

@keyframes pageActivate {
  0% { opacity: 0; transform: scale(0.96); }
  100% { opacity: 1; transform: scale(1); }
}

@keyframes pageFadeIn {
  0% { opacity: 0; transform: translateY(var(--motion-translate-sm)); }
  100% { opacity: 1; transform: translateY(0); }
}

@media (prefers-reduced-motion: reduce) {
  .page-active .content-wrapper,
  .page-active .profile-content,
  .page-active .header {
    animation: none;
  }
  .skel-block {
    animation: none !important;
  }
}

/* Skeleton Screen */
@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

.skel-block {
  background: linear-gradient(
    90deg,
    var(--color-bg-soft) 25%,
    var(--color-border) 50%,
    var(--color-bg-soft) 75%
  );
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite linear;
  border-radius: var(--radius-sm);
}
