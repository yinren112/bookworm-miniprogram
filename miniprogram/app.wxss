/* app.wxss */

/* --- 1. 全局设计语言 (The Law) --- */
page {
  /* 色彩 (Color) */
  --primary-color: #2c5f2d;
  --text-primary: #1a1a1a;
  --text-secondary: #6b6b6b;
  --background-color: #f8f9fa;
  --card-background: #ffffff;
  --border-color: #e9ecef;
  --success-color: #28a745;
  --error-color: #dc3545;
  --warning-color: #ffc107;
  --bg-primary: #F3FBF6; /* User requested variable */

  /* 排版 (Typography) */
  --font-size-display: 48rpx;
  --font-size-title: 36rpx;
  --font-size-body: 28rpx;
  --font-size-caption: 24rpx;
  --font-weight-normal: 400;
  --font-weight-bold: 600;

  /* 间距 (Spacing) */
  --space-xs: 8rpx;
  --space-s: 16rpx;
  --space-m: 24rpx;
  --space-l: 32rpx;
  --space-xl: 48rpx;

  /* --- 黏土风核心变量 (Claymorphism - Green Nature Theme) --- */
  /* 背景：清新的晨雾绿渐变 */
  --clay-bg-gradient: linear-gradient(135deg, #F0F9F4 0%, #E1EFE6 100%);
  --clay-bg: #F0F9F4; /* Fallback & base color */
  
  /* 文字：深邃的墨绿灰 */
  --clay-text-main: #2C3E35; 
  --clay-text-light: #8FA396;
  
  /* 卡片：纯白，带一点点环境色的暖意 */
  --clay-card-bg: #ffffff;
  
  /* 强调色：抹茶绿/森绿 */
  --primary-color: #48BB78;
  --accent-color: #38A169;
  
  --radius-xl: 60rpx;
  --radius-l: 48rpx;
  --radius-m: 32rpx;
  --radius-s: 16rpx;

  /* 凸起效果 - 阴影带一点点青色倾向，更通透 - Optimized */
  --shadow-clay-out: 
    16rpx 16rpx 40rpx rgba(160, 180, 170, 0.35), 
    -16rpx -16rpx 40rpx rgba(255, 255, 255, 0.9);
  
  /* 凹陷效果 */
  --shadow-clay-in: inset 8rpx 8rpx 16rpx rgba(160, 180, 170, 0.2), inset -8rpx -8rpx 16rpx rgba(255, 255, 255, 0.8);

  /* 基础样式 */
  font-family: 'Nunito', 'PingFang SC', system-ui, sans-serif;
  font-size: var(--font-size-body);
  color: var(--clay-text-main);
  background: var(--clay-bg-gradient); /* 应用全局渐变 */
  background-attachment: fixed; /* 确保渐变不随滚动断层 */
  line-height: 1.6;
}

page {
  /* 必须在 page 标签上也应用，否则高度不够 */
  background: var(--clay-bg-gradient);
  min-height: 100vh;
  background-attachment: fixed;
}

/* --- 2. 全局组件 (Components) --- */

/* 容器 */
.container {
  padding: var(--space-m) var(--space-l);
}

/* 卡片 - Clay Default */
.card {
  background-color: var(--clay-card-bg);
  border-radius: var(--radius-l);
  padding: var(--space-l);
  margin-bottom: var(--space-m);
  box-shadow: var(--shadow-clay-out);
}

/* 按钮 */
.btn {
  display: inline-block;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 var(--space-l);
  border-radius: var(--radius-m);
  font-size: var(--font-size-body);
  font-weight: var(--font-weight-bold);
  text-align: center;
  vertical-align: middle;
  border: none;
  cursor: pointer;
  transition: transform 0.1s;
}
.btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}
.btn-primary {
  background-color: var(--primary-color);
  color: #ffffff !important;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  box-shadow: 8rpx 8rpx 16rpx rgba(44, 95, 45, 0.3);
}

.btn-primary::after {
  border: none;
}
.btn-sm {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 var(--space-s);
  font-size: var(--font-size-caption);
  border-radius: 12rpx;
}
.btn[disabled] {
  opacity: 0.5;
  pointer-events: none;
}

/* 状态标签 */
.status-tag {
  display: inline-block;
  padding: var(--space-xs) var(--space-s);
  border-radius: 8rpx;
  font-size: var(--font-size-caption);
  font-weight: var(--font-weight-bold);
  color: #ffffff;
}
.status-tag.success { background-color: var(--success-color); }
.status-tag.error { background-color: var(--error-color); }
.status-tag.warning { background-color: var(--warning-color); }

/* 全局点击反馈 */
.item-hover {
  background-color: rgba(0, 0, 0, 0.05);
}

/* --- 3. 全局工具类 (Utilities) --- */

/* 数字字体优化 */
.clay-num {
  font-family: 'DIN Alternate', 'Courier New', monospace;
  letter-spacing: -1rpx;
  font-weight: bold;
}

/* 动画：淡入上浮 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.anim-fade-in-up {
  animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
}

/* 背景装饰球 (需要在页面 wxml 中添加 view.bg-blob) */
.bg-blob {
  position: fixed;
  border-radius: 50%;
  filter: blur(60rpx);
  z-index: -1;
  opacity: 0.6;
}

.bg-blob-1 {
  width: 400rpx; height: 400rpx;
  background: #C6F6D5; /* 浅绿 */
  top: -100rpx; left: -100rpx;
}

.bg-blob-2 {
  width: 300rpx; height: 300rpx;
  background: #E2E8F0; /* 浅蓝灰 */
  bottom: 20%; right: -50rpx;
}


  .bg-blob-3 {
  width: 200rpx; height: 200rpx;
  background: #FEFCBF; /* 浅黄 */
  top: 40%; left: 20%;
  opacity: 0.4;
}

/* --- 4. 统一组件样式 (Unified Light Clay Components) --- */

/* 标准卡片 - 32rpx圆角 + P1阴影 */
.clay-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  /* Soft Drop Shadow + Inner Shine */
  box-shadow:
    16rpx 16rpx 32rpx rgba(44, 95, 45, 0.08),
    -8rpx -8rpx 20rpx rgba(255, 255, 255, 1.0),
    inset 2rpx 2rpx 4rpx rgba(255, 255, 255, 0.8),
    inset -2rpx -2rpx 4rpx rgba(44, 95, 45, 0.02);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

/* 主操作按钮 - Pill Shape + Gradient Green */
.clay-btn-primary {
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #2c5f2d 0%, #447045 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  box-shadow:
    6rpx 6rpx 16rpx rgba(44, 95, 45, 0.25),
    inset 0 4rpx 6rpx rgba(255, 255, 255, 0.2);
  transition: all 0.2s ease;
}

.clay-btn-primary:active {
  transform: scale(0.98);
  box-shadow: inset 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.clay-btn-primary::after { border: none; }

/* --- 5. Dark Mode (Midnight Forest Theme) --- */
@media (prefers-color-scheme: dark) {
  page {
    /* Midnight Forest - Deep Dark Green */
    --clay-bg-gradient: linear-gradient(135deg, #0b2d1f 0%, #0d3a28 100%);
    --clay-bg: #0b2d1f;
    --bg-primary: #0b2d1f;
    --clay-text-main: #e2e8f0;    /* Slate-200 */
    --clay-text-light: #94a3b8;   /* Slate-400 */
    --clay-card-bg: #113023;      /* Dark Forest Card */
    
    --background-color: #0b2d1f;
    --card-background: #113023;
    --text-primary: #f8fafc;
    --text-secondary: #cbd5e1;

    /* Dark Mode Shadows: Deeper, subtler glow */
    --shadow-clay-out: 
      16rpx 16rpx 40rpx rgba(0, 0, 0, 0.5), 
      -8rpx -8rpx 30rpx rgba(255, 255, 255, 0.04);
      
    --shadow-clay-in: 
      inset 8rpx 8rpx 16rpx rgba(0, 0, 0, 0.5), 
      inset -8rpx -8rpx 16rpx rgba(255, 255, 255, 0.04);
  }

  .clay-card, .card {
    box-shadow: var(--shadow-clay-out);
    border: 1rpx solid rgba(255, 255, 255, 0.05);
    background: var(--clay-card-bg);
  }

  .card-front, .card-back {
    background: linear-gradient(135deg, #113023 0%, #16402e 100%);
  }
  
  .card-label, .card-hint, .loading-text, .empty-text, .complete-desc {
    color: var(--clay-text-light);
  }
  
  .card-text, .complete-title {
    color: var(--clay-text-main);
  }
  
  .feedback-btn {
    background: #1a4231;
    box-shadow: 
      6rpx 6rpx 16rpx rgba(0, 0, 0, 0.4), 
      -2rpx -2rpx 10rpx rgba(255, 255, 255, 0.05);
  }
  
  /* Adjust feedback colors for dark mode */
  .feedback-btn.forgot { background: #451e1e; color: #ff8a80; }
  .feedback-btn.fuzzy { background: #453010; color: #ffd180; }
  .feedback-btn.knew { background: #1b3a24; color: #a5d6a7; }
  .feedback-btn.perfect { background: #102a45; color: #90caf9; }
  
  .report-btn { color: #566960; }
}