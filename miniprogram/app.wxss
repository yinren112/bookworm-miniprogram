/* app.wxss */

/* --- 1. 全局设计语言 (The Law) --- */
page {
  /* 色彩 (Color) */
  --primary-color: #2c5f2d;
  --text-primary: #1a1a1a;
  --text-secondary: #6b6b6b;
  --background-color: #f8f9fa;
  --card-background: #ffffff;
  --border-color: #e9ecef;
  --success-color: #28a745;
  --error-color: #dc3545;
  --warning-color: #ffc107;

  /* 排版 (Typography) */
  --font-size-display: 48rpx;
  --font-size-title: 36rpx;
  --font-size-body: 28rpx;
  --font-size-caption: 24rpx;
  --font-weight-normal: 400;
  --font-weight-bold: 600;

  /* 间距 (Spacing) */
  --space-xs: 8rpx;
  --space-s: 16rpx;
  --space-m: 24rpx;
  --space-l: 32rpx;
  --space-xl: 48rpx;

  /* --- 黏土风核心变量 (Claymorphism - Green Nature Theme) --- */
  /* 背景：清新的晨雾绿渐变 */
  --clay-bg-gradient: linear-gradient(135deg, #F0F9F4 0%, #E1EFE6 100%);
  --clay-bg: #F0F9F4; /* Fallback & base color */
  
  /* 文字：深邃的墨绿灰 */
  --clay-text-main: #2C3E35; 
  --clay-text-light: #8FA396;
  
  /* 卡片：纯白，带一点点环境色的暖意 */
  --clay-card-bg: #ffffff;
  
  /* 强调色：抹茶绿/森绿 */
  --primary-color: #48BB78;
  --accent-color: #38A169;
  
  --radius-xl: 60rpx;
  --radius-l: 48rpx;
  --radius-m: 32rpx;
  --radius-s: 16rpx;

  /* 凸起效果 - 阴影带一点点青色倾向，更通透 */
  /* 优化：大幅增加阴影的扩散半径 (60rpx -> 40rpx) 和不透明度，模拟强光源 */
  --shadow-clay-out: 
    20rpx 20rpx 60rpx rgba(160, 180, 170, 0.5), 
    -20rpx -20rpx 60rpx rgba(255, 255, 255, 1);
  
  /* 凹陷效果 */
  --shadow-clay-in: inset 10rpx 10rpx 20rpx rgba(160, 180, 170, 0.25), inset -10rpx -10rpx 20rpx rgba(255, 255, 255, 0.9);

  /* 基础样式 */
  font-family: 'Nunito', 'PingFang SC', system-ui, sans-serif;
  font-size: var(--font-size-body);
  color: var(--clay-text-main);
  background: var(--clay-bg-gradient); /* 应用全局渐变 */
  background-attachment: fixed; /* 确保渐变不随滚动断层 */
  line-height: 1.6;
}

page {
  /* 必须在 page 标签上也应用，否则高度不够 */
  background: var(--clay-bg-gradient);
  min-height: 100vh;
  background-attachment: fixed;
}

/* --- 2. 全局组件 (Components) --- */

/* 容器 */
.container {
  padding: var(--space-m) var(--space-l);
}

/* 卡片 - Clay Default */
.card {
  background-color: var(--clay-card-bg);
  border-radius: var(--radius-l);
  padding: var(--space-l);
  margin-bottom: var(--space-m);
  box-shadow: var(--shadow-clay-out);
}

/* 按钮 */
.btn {
  display: inline-block;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 var(--space-l);
  border-radius: var(--radius-m);
  font-size: var(--font-size-body);
  font-weight: var(--font-weight-bold);
  text-align: center;
  vertical-align: middle;
  border: none;
  cursor: pointer;
  transition: transform 0.1s;
}
.btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}
.btn-primary {
  background-color: var(--primary-color);
  color: #ffffff !important;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  box-shadow: 8rpx 8rpx 16rpx rgba(44, 95, 45, 0.3);
}

.btn-primary::after {
  border: none;
}
.btn-sm {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 var(--space-s);
  font-size: var(--font-size-caption);
  border-radius: 12rpx;
}
.btn[disabled] {
  opacity: 0.5;
  pointer-events: none;
}

/* 状态标签 */
.status-tag {
  display: inline-block;
  padding: var(--space-xs) var(--space-s);
  border-radius: 8rpx;
  font-size: var(--font-size-caption);
  font-weight: var(--font-weight-bold);
  color: #ffffff;
}
.status-tag.success { background-color: var(--success-color); }
.status-tag.error { background-color: var(--error-color); }
.status-tag.warning { background-color: var(--warning-color); }

/* 全局点击反馈 */
.item-hover {
  background-color: rgba(0, 0, 0, 0.05);
}

/* --- 3. 全局工具类 (Utilities) --- */

/* 数字字体优化 */
.clay-num {
  font-family: 'DIN Alternate', 'Courier New', monospace;
  letter-spacing: -1rpx;
  font-weight: bold;
}

/* 动画：淡入上浮 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.anim-fade-in-up {
  animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
}

/* 背景装饰球 (需要在页面 wxml 中添加 view.bg-blob) */
.bg-blob {
  position: fixed;
  border-radius: 50%;
  filter: blur(60rpx);
  z-index: -1;
  opacity: 0.6;
}

.bg-blob-1 {
  width: 400rpx; height: 400rpx;
  background: #C6F6D5; /* 浅绿 */
  top: -100rpx; left: -100rpx;
}

.bg-blob-2 {
  width: 300rpx; height: 300rpx;
  background: #E2E8F0; /* 浅蓝灰 */
  bottom: 20%; right: -50rpx;
}

.bg-blob-3 {
  width: 200rpx; height: 200rpx;
  background: #FEFCBF; /* 浅黄 */
  top: 40%; left: 20%;
  opacity: 0.4;
}