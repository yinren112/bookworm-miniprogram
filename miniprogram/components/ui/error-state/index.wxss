.er {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: var(--space-10) var(--space-8);
}

.er__icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: var(--radius-round);
  border: var(--border-thick) solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--space-6);
  background: var(--color-bg-card);
}

.er__icon--network { border-color: var(--color-juicy-blue); }
.er__icon--forbidden { border-color: var(--color-juicy-yellow); }
.er__icon--empty { border-color: var(--color-border); }
.er__icon--unknown { border-color: var(--color-juicy-red); }

.er__iconText {
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
}

.er__title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.er__desc {
  margin-top: var(--space-3);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-light);
}

.er__actions {
  width: 80%;
  margin-top: var(--space-8);
}
