:host {
  --jb-radius: 36rpx;
  --jb-h: 112rpx;
  --jb-bounce: var(--ease-bouncy);
  --jb-border: 3rpx;
}

.jb {
  position: relative;
  height: var(--jb-h);
  border-radius: var(--jb-radius);
  padding: 0;
  overflow: hidden;
  border: none;
  background: transparent;
  box-sizing: border-box;
  /* Fix overflow clipping on some devices */
  transform: translateZ(0);
}

.jb::after {
  border: none;
}

.jb__face {
  position: relative;
  z-index: 2;
  height: var(--jb-h);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 800;
  border-radius: var(--jb-radius);
  font-size: 34rpx;
  letter-spacing: 1rpx;
  transition: transform var(--duration-fast) var(--jb-bounce);
}

.jb.is-pressed .jb__face {
  transform: scale(0.99);
}

.jb--md { --jb-h: 96rpx; }
.jb--sm { --jb-h: 80rpx; }
.jb--sm .jb__face { font-size: var(--font-size-md); }

.jb--primary .jb__face{
  background: var(--color-juicy-green);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(70,176,101,0.3);
}

.jb--secondary .jb__face{
  background: var(--color-bg-card);
  color: var(--color-text-light);
  border: var(--jb-border) solid var(--color-border);
}

.jb--outline .jb__face{
  background: var(--color-bg-card);
  color: var(--color-juicy-red);
  border: var(--jb-border) solid var(--color-border);
  box-sizing: border-box;
}

.jb--danger .jb__face{ background: var(--color-juicy-red); color:#fff; }

.jb--full{ width: 100%; }

.is-disabled{ opacity: .45; pointer-events: none; }
