@media (prefers-reduced-motion: reduce) {
  .et.play.is-visible {
    animation: etFadeIn 0.1s linear both;
    transform: none !important;
  }
}

@keyframes etFadeIn { from { opacity: 0; } to { opacity: 1; } }
