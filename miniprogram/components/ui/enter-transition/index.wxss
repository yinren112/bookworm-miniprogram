.et {
  width: 100%;
  opacity: 1;
  transform: scale(1) translateY(0);
  will-change: transform, opacity;
}

.et.is-hidden {
  opacity: 0;
  transform: scale(var(--et-scale)) translateY(var(--et-translate));
  pointer-events: none;
}

.et.is-visible {
  opacity: 1;
  transform: scale(1) translateY(0);
}

.et.play.is-visible {
  /* Use a base animation name that can be overridden by style inline */
  animation: etScaleFade var(--et-duration) var(--ease-out-expo) var(--et-delay, 0ms) both;
}

/* Define multiple identical keyframes to support key-based re-triggering */
@keyframes etScaleFade { from { opacity: 0; transform: scale(var(--et-scale)) translateY(var(--et-translate)); } to { opacity: 1; transform: scale(1) translateY(0); } }
