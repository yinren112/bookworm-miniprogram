/* components/state-view/state-view.wxss */
.state-view {
  padding: 40rpx 24rpx;
  text-align: center;
  color: #3f3f3f;
}

.state-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.state-text {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 12rpx;
}

.state-actions {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

.state-btn {
  background: #2c5f2d;
  color: #ffffff;
  font-size: 24rpx;
  padding: 8rpx 28rpx;
  border-radius: 999rpx;
}

.state-btn.ghost {
  background: #ffffff;
  color: #2c5f2d;
  border: 1rpx solid #2c5f2d;
}
