/* components/skeleton/skeleton.wxss */
.skeleton-container {
  padding: var(--space-l);
  animation: skeletonPulse 1.5s ease-in-out infinite;
}

/* Grid Layout (for market page) */
.skeleton-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--space-m);
}

.skeleton-item {
  background-color: var(--card-background);
  border-radius: 24rpx;
  padding: var(--space-m);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.skeleton-image {
  width: 100%;
  height: 240rpx;
  background: var(--border-color);
  border-radius: 16rpx;
  margin-bottom: var(--space-m);
}

/* Large Image (for detail page) */
.skeleton-image-large {
  width: 100%;
  height: 480rpx;
  background: var(--border-color);
  border-radius: 24rpx;
  margin-bottom: var(--space-xl);
}

/* Text Placeholders */
.skeleton-text {
  height: 40rpx;
  background: var(--border-color);
  border-radius: 8rpx;
  margin-bottom: var(--space-m);
}

.skeleton-text.title {
  width: 85%;
  height: 56rpx;
  border-radius: 12rpx;
}

.skeleton-text.short {
  width: 50%;
}

.skeleton-divider {
  height: 4rpx;
  background: var(--border-color);
  margin: var(--space-xl) 0;
  border-radius: 2rpx;
}

/* List Items */
.skeleton-list-item {
  padding: var(--space-m) 0;
  border-bottom: 1rpx solid var(--border-color);
}

.skeleton-list-item:last-child {
  border-bottom: none;
}

/* Animation */
@keyframes skeletonPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}