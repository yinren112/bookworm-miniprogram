.skeleton-container {
  padding: var(--space-8);
  animation: skeletonPulse 1.5s ease-in-out infinite;
}

.skeleton-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--space-6);
}

.skeleton-item {
  background-color: var(--color-bg-card);
  border-radius: var(--radius-card);
  padding: var(--space-6);
  border: var(--border-thick) solid var(--color-border);
}

.skeleton-image {
  width: 100%;
  height: 240rpx;
  background: var(--color-border);
  border-radius: 16rpx;
  margin-bottom: var(--space-6);
}

.skeleton-image-large {
  width: 100%;
  height: 480rpx;
  background: var(--color-border);
  border-radius: 24rpx;
  margin-bottom: var(--space-10);
}

.skeleton-text {
  height: 40rpx;
  background: var(--color-border);
  border-radius: 8rpx;
  margin-bottom: var(--space-6);
}

.skeleton-text.title {
  width: 85%;
  height: 56rpx;
  border-radius: 12rpx;
}

.skeleton-text.short {
  width: 50%;
}

.skeleton-divider {
  height: 4rpx;
  background: var(--color-border);
  margin: var(--space-10) 0;
  border-radius: 2rpx;
}

.skeleton-list-item {
  padding: var(--space-6) 0;
  border-bottom: 1rpx solid var(--color-border);
}

.skeleton-list-item:last-child {
  border-bottom: none;
}

@keyframes skeletonPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}
