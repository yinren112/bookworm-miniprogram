/* pages/webview/index.wxss */

.page-container {
  min-height: 100vh;
  background-color: var(--clay-bg);
  padding: var(--space-l);
}

/* Error State */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  filter: grayscale(1);
  opacity: 0.5;
}

.error-text {
  font-size: var(--font-size-body);
  color: var(--clay-text-light);
  margin-bottom: var(--space-l);
}

.retry-btn {
  background: #fff;
  color: var(--clay-text-main);
  font-size: 28rpx;
  padding: 16rpx 48rpx;
  border-radius: 40rpx;
  box-shadow: var(--shadow-clay-out);
  border: none;
}

/* Paper Card (The Document) */
.paper-card {
  background-color: #fff;
  border-radius: var(--radius-l);
  box-shadow: var(--shadow-clay-out);
  position: relative;
  margin-bottom: var(--space-xl);
  overflow: hidden;
}

/* Decorative Holes (Binding look) */
.holes-row {
  height: 80rpx;
  background: #f7fafc;
  display: flex;
  align-items: center;
  gap: 40rpx;
  padding-left: 40rpx;
  border-bottom: 2rpx dashed #e2e8f0;
}

.hole {
  width: 24rpx;
  height: 24rpx;
  background: var(--clay-bg);
  border-radius: 50%;
  box-shadow: inset 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
}

/* Content Body */
.content-body {
  padding: var(--space-xl);
}

.doc-title {
  font-size: 40rpx;
  font-weight: 900;
  color: var(--clay-text-main);
  text-align: center;
  margin-bottom: var(--space-l);
}

.doc-divider {
  height: 4rpx;
  background: #f0f0f0;
  width: 100rpx;
  margin: 0 auto var(--space-xl) auto;
  border-radius: 4rpx;
}

.rich-content {
  font-size: 30rpx;
  line-height: 1.8;
  color: var(--clay-text-main);
  text-align: justify;
}

/* Rich Text Styling (matches typical HTML tags) */
/* Note: rich-text class selection is limited in小程序, 
   but global tags or inline styles work. 
   We rely on inherited styles mostly. */
