/* pages/book-detail/index.wxss - Modern Design 2025 */

/* Modern Container with Gradient Background */
.container {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  padding: 0;
  padding-bottom: 180rpx; /* Space for the footer bar */
  position: relative;
}

/* Enhanced Loading and Error States */
.loading-indicator, .error-message {
  text-align: center;
  color: var(--text-color-secondary);
  padding: 120rpx 32rpx;
  font-size: 30rpx;
  line-height: 1.5;
}

.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
  padding: 32rpx;
  text-align: center;
  color: var(--text-color-secondary);
  background: rgba(255, 255, 255, 0.6);
  border-radius: 24rpx;
  margin: 40rpx 24rpx;
  backdrop-filter: blur(10rpx);
}

/* Modern Detail Container */
.detail-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  padding: 40rpx 32rpx 0 32rpx;
}

/* Enhanced Cover Image with Modern Shadow */
.cover-image {
  width: 420rpx;
  height: 560rpx;
  margin-bottom: 48rpx;
  border-radius: 24rpx;
  box-shadow: 
    0 20rpx 60rpx rgba(44, 95, 45, 0.15),
    0 8rpx 24rpx rgba(0, 0, 0, 0.1),
    0 0 0 1rpx rgba(255, 255, 255, 0.8);
  background-color: var(--border-color);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.cover-image::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, transparent 0%, rgba(255, 255, 255, 0.1) 100%);
  pointer-events: none;
}

.cover-image:active {
  transform: scale(0.98);
}

/* Modern Info Section */
.info-section {
  width: 100%;
  text-align: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 
    0 8rpx 32rpx rgba(44, 95, 45, 0.08),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
}

/* Enhanced Typography */
.title {
  font-size: 48rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 16rpx;
  word-wrap: break-word;
  line-height: 1.2;
  color: var(--text-color-primary);
  letter-spacing: -0.5rpx;
  background: linear-gradient(135deg, var(--text-color-primary), var(--text-color-secondary));
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.author {
  font-size: 32rpx;
  color: var(--text-color-secondary);
  margin: 0 0 48rpx 0;
  display: block;
  word-wrap: break-word;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* Modern Price Section with Better Visual Hierarchy */
.price-section {
  margin: 48rpx 0;
  padding: 32rpx 24rpx;
  background: linear-gradient(135deg, rgba(44, 95, 45, 0.05), rgba(85, 128, 86, 0.03));
  border-radius: 20rpx;
  border: 2rpx solid rgba(44, 95, 45, 0.1);
  position: relative;
}

.price-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  border-radius: 20rpx 20rpx 0 0;
}

.selling-price {
  font-size: 56rpx;
  font-weight: 800;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-right: 24rpx;
  letter-spacing: -1rpx;
}

.original-price {
  font-size: 32rpx;
  color: var(--text-color-secondary);
  text-decoration: line-through;
  font-weight: 400;
  opacity: 0.7;
}

/* Modern Specs Card */
.specs-card {
  margin: 32rpx 0;
  background: rgba(248, 249, 250, 0.7);
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(233, 236, 239, 0.8);
}

.spec-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(233, 236, 239, 0.5);
  transition: background-color 0.2s ease;
}

.spec-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.spec-item:hover {
  background-color: rgba(44, 95, 45, 0.02);
  border-radius: 12rpx;
  margin: 0 -16rpx;
  padding: 20rpx 16rpx;
}

.spec-label {
  font-size: 30rpx;
  color: var(--text-color-secondary);
  font-weight: 500;
  flex-shrink: 0;
  min-width: 120rpx;
}

.spec-value {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color-primary);
  text-align: right;
  word-break: break-all;
  margin-left: 24rpx;
  flex: 1;
}

/* Modern Footer Bar */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 
    0 -8rpx 32rpx rgba(44, 95, 45, 0.08),
    0 -2rpx 8rpx rgba(0, 0, 0, 0.04);
  border-top: 1rpx solid rgba(233, 236, 239, 0.8);
}

/* Enhanced Buy Button */
.buy-button {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: white;
  width: 100%;
  font-size: 36rpx;
  font-weight: 700;
  border-radius: 28rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 
    0 8rpx 24rpx rgba(44, 95, 45, 0.25),
    0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.buy-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.buy-button:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 4rpx 12rpx rgba(44, 95, 45, 0.2),
    0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.buy-button:active::before {
  left: 100%;
}

/* Modern Skeleton Styles */
.skeleton-container {
  padding: 40rpx 32rpx;
  animation: skeletonPulse 1.5s ease-in-out infinite;
}

.skeleton-image-large {
  width: 100%;
  height: 480rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeletonShimmer 2s infinite;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
}

.skeleton-text {
  height: 40rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeletonShimmer 2s infinite;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
}

.skeleton-text.title {
  width: 85%;
  height: 56rpx;
  border-radius: 12rpx;
}

.skeleton-text.short {
  width: 50%;
}

.skeleton-divider {
  height: 4rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeletonShimmer 2s infinite;
  margin: 40rpx 0;
  border-radius: 2rpx;
}

/* Enhanced Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes skeletonPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

@keyframes skeletonShimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

.animated {
  animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Responsive Design */
@media screen and (min-width: 768px) {
  .container {
    max-width: 800rpx;
    margin: 0 auto;
  }
  
  .cover-image {
    width: 480rpx;
    height: 640rpx;
  }
  
  .info-section {
    padding: 48rpx 40rpx;
  }
}