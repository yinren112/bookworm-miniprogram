/* pages/book-detail/index.wxss */
.container {
  padding: 0 30rpx; /* Add horizontal padding */
  padding-bottom: 160rpx; /* Space for the footer bar */
}
.loading-indicator, .error-message {
  text-align: center;
  color: var(--text-color-secondary);
  padding: 80rpx 0;
}

.detail-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cover-image {
  width: 400rpx;
  height: 500rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  border-radius: 16rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
  background-color: var(--border-color);
}

.info-section {
  width: 100%;
  text-align: center;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
  word-wrap: break-word; /* Allow title to wrap if too long */
  line-height: 1.3;
}

.author {
  font-size: 30rpx;
  color: var(--text-color-secondary);
  margin-top: 10rpx;
  display: block;
  word-wrap: break-word; /* Allow author name to wrap if too long */
}

.price-section {
  margin: 40rpx 0;
}
.selling-price {
  font-size: 52rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-right: 20rpx;
}
.original-price {
  font-size: 30rpx;
  color: var(--text-color-secondary);
  text-decoration: line-through;
}

.specs-card {
  width: 100%;
  text-align: left;
}

.spec-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start; /* Changed: Allow vertical alignment for multi-line content */
  padding: 24rpx 0;
  border-bottom: 1px solid var(--border-color);
  min-height: 60rpx; /* Ensure consistent height */
}
.spec-item:last-child {
  border-bottom: none;
}

.spec-label {
  font-size: 28rpx;
  color: var(--text-color-secondary);
  flex-shrink: 0;
  width: 160rpx; /* Fixed width for consistent alignment */
  margin-right: 20rpx;
}

.spec-value {
  font-size: 28rpx;
  font-weight: 500;
  flex: 1; /* Use remaining space */
  text-align: right;
  word-wrap: break-word; /* Allow long text to wrap */
  word-break: break-all; /* Break long words if necessary */
  max-width: calc(100% - 180rpx); /* Prevent overflow */
  line-height: 1.4; /* Better line spacing for multi-line text */
}

.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--card-background-color);
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom)); /* iPhone X safe area */
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
}

.buy-button {
  background-color: var(--primary-color);
  color: white;
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 24rpx;
}