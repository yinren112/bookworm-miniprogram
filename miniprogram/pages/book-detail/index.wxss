/* pages/book-detail/index.wxss */

/* Page Container */
.detail-page {
  min-height: 100vh;
  background-color: var(--clay-bg);
  padding-bottom: 240rpx; /* Space for footer */
  position: relative;
  overflow-x: hidden;
}

/* 1. Cover Section (Clay Display Stand) */
.cover-section {
  position: relative;
  height: 600rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--space-l);
}

.cover-bg-circle {
  position: absolute;
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  background: linear-gradient(180deg, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0) 100%);
  top: -100rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 0;
  filter: blur(40rpx);
}

.cover-container {
  position: relative;
  z-index: 1;
  width: 400rpx;
  height: 540rpx;
  background: #fff;
  border-radius: 12rpx;
  /* 书本立体阴影：底部深阴影 + 侧边厚度感 */
  box-shadow: 
    20rpx 30rpx 50rpx rgba(166, 180, 200, 0.5),
    -2rpx 0 4rpx rgba(255,255,255,0.5) inset; /* 高光 */
  transform: rotateY(-5deg) rotateX(5deg); /* 微妙的3D透视 */
  transition: transform 0.3s ease;
}

.cover-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 2. Info Card (Clay Card) */
.info-card {
  background: var(--clay-card-bg);
  border-radius: var(--radius-xl) var(--radius-xl) 0 0;
  padding: 48rpx var(--space-l);
  margin: 0 var(--space-m);
  /* 只有上方有阴影，模拟卡片从底部升起 */
  box-shadow: 0 -10rpx 40rpx rgba(166, 180, 200, 0.2);
  min-height: 400rpx;
  position: relative;
  z-index: 2;
}

.title-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: var(--space-s);
}

.title {
  font-size: 44rpx;
  font-weight: 900;
  color: var(--clay-text-main);
  line-height: 1.2;
  flex: 1;
  margin-right: var(--space-m);
}

.condition-badge {
  background: #E2F0CB;
  color: #558056;
  font-size: 24rpx;
  font-weight: 800;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  white-space: nowrap;
  box-shadow: 4rpx 4rpx 10rpx rgba(166, 180, 200, 0.2);
}

.author {
  font-size: 30rpx;
  color: var(--clay-text-light);
  font-weight: 600;
  display: block;
  margin-bottom: 40rpx;
}

/* Price Row */
.price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 48rpx;
}

.currency {
  font-size: 36rpx;
  font-weight: 900;
  color: var(--clay-text-main);
  margin-right: 4rpx;
}

.selling-price {
  font-size: 64rpx;
  font-weight: 900;
  color: var(--clay-text-main);
  margin-right: var(--space-m);
  letter-spacing: -2rpx;
}

.original-price {
  font-size: 28rpx;
  color: var(--clay-text-light);
  text-decoration: line-through;
  font-weight: 600;
}

/* Specs Grid (Inset Style) */
.specs-grid {
  background: var(--clay-bg);
  border-radius: var(--radius-l);
  padding: var(--space-m);
  box-shadow: var(--shadow-clay-in); /* 凹陷效果 */
  display: flex;
  flex-direction: column;
  gap: var(--space-s);
}

.spec-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  border-bottom: 2rpx solid rgba(0,0,0,0.03);
}

.spec-item:last-child {
  border-bottom: none;
}

.spec-label {
  font-size: 26rpx;
  color: var(--clay-text-light);
  font-weight: 600;
}

.spec-value {
  font-size: 28rpx;
  color: var(--clay-text-main);
  font-weight: 700;
}

.spec-value.isbn {
  font-family: monospace;
  letter-spacing: 1rpx;
}


/* Footer Bar (Floating Clay) */
.footer-bar {
  position: fixed;
  bottom: 40rpx;
  left: var(--space-m);
  right: var(--space-m);
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  padding: 20rpx 30rpx;
  border-radius: 40rpx;
  box-shadow: 
    10rpx 20rpx 40rpx rgba(166, 180, 200, 0.4),
    -4rpx -4rpx 10rpx rgba(255, 255, 255, 0.8);
  z-index: 100;
  border: 1rpx solid rgba(255,255,255,0.5);
}

.action-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price-info {
  display: flex;
  flex-direction: column;
}

.price-info .label {
  font-size: 20rpx;
  color: var(--clay-text-light);
  font-weight: 700;
  text-transform: uppercase;
}

.price-info .total-price {
  font-size: 36rpx;
  font-weight: 900;
  color: var(--clay-text-main);
}

.buy-btn {
  background: var(--clay-text-main);
  color: #fff;
  border-radius: 30rpx;
  padding: 0 60rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-weight: 800;
  box-shadow: 6rpx 6rpx 16rpx rgba(74, 85, 104, 0.4);
  border: none;
  transition: transform 0.1s;
  margin: 0; /* Reset default button margin */
}

.buy-btn:active {
  transform: scale(0.96);
  box-shadow: inset 4rpx 4rpx 8rpx rgba(0,0,0,0.3);
}

.buy-btn[disabled] {
  background: var(--clay-text-light);
  box-shadow: none;
  opacity: 0.7;
}

/* Error/Empty States */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
  color: var(--clay-text-light);
  font-weight: 600;
}

.empty-img {
  width: 300rpx;
  margin-bottom: var(--space-m);
  opacity: 0.8;
}
