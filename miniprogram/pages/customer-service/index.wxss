page {
  background: var(--color-bg-soft);
}

.page-container {
  padding: var(--space-8);
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

.card-header {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  margin-bottom: var(--space-6);
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  border: var(--border-thick) solid var(--color-border);
  background: var(--color-bg-card);
}

.card-info {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.role-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.service-time {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.wechat-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-4);
}

.wechat-box {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  overflow: hidden;
}

.label {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.value {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.copy-action {
  width: 160rpx;
  flex: 0 0 auto;
}

.faq-section {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.section-header {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.faq-group {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.chat-bubble {
  border-radius: var(--radius-card);
  border: var(--border-thick) solid var(--color-border);
  background: var(--color-bg-card);
  padding: var(--space-6);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-main);
}

.faq-group .chat-bubble {
  opacity: 0;
  transform: scale(0.98) translateY(var(--motion-translate-sm));
  animation: bubbleIn var(--duration-page) var(--ease-standard) forwards;
}

.faq-group .chat-bubble:nth-child(1) { animation-delay: 0ms; }
.faq-group .chat-bubble:nth-child(2) { animation-delay: 40ms; }
.faq-group .chat-bubble:nth-child(3) { animation-delay: 80ms; }
.faq-group .chat-bubble:nth-child(4) { animation-delay: 120ms; }
.faq-group .chat-bubble:nth-child(5) { animation-delay: 160ms; }
.faq-group .chat-bubble:nth-child(6) { animation-delay: 200ms; }

@keyframes bubbleIn {
  from {
    opacity: 0;
    transform: scale(0.98) translateY(var(--motion-translate-sm));
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.chat-bubble.question {
  border-color: var(--color-juicy-blue);
}

.chat-bubble.answer {
  border-color: var(--color-border);
  color: var(--color-text-light);
}
