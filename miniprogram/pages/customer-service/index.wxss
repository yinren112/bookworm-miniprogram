/* pages/customer-service/index.wxss */
.page {
  padding: var(--space-m) var(--space-l);
  background-color: var(--background-color);
  min-height: 100vh;
}

/* Use Global Card Style */
.contact-section, .faq-section {
  background-color: var(--card-background);
  border-radius: 24rpx;
  padding: var(--space-l);
  margin-bottom: var(--space-m);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
  margin-bottom: var(--space-xl);
  padding-bottom: var(--space-m);
  border-bottom: 3rpx solid var(--primary-color);
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -3rpx;
  left: 0;
  width: 60rpx;
  height: 3rpx;
  background-color: var(--secondary-color);
}

/* Contact Styles */
.contact-item {
  display: flex;
  flex-direction: column;
  padding: var(--space-l) 0;
  border-bottom: 1rpx solid var(--border-color);
  gap: var(--space-m);
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-label {
  font-size: var(--font-size-body);
  color: var(--text-primary);
  font-weight: var(--font-weight-bold);
  margin-bottom: var(--space-xs);
}

.contact-value {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: var(--background-color);
  padding: var(--space-m);
  border-radius: 16rpx;
  border: 1rpx solid var(--border-color);
}

.wechat-id {
  font-size: var(--font-size-body);
  color: var(--text-primary);
  font-family: monospace;
  font-weight: var(--font-weight-bold);
  flex: 1;
}

.work-time {
  font-size: var(--font-size-body);
  color: var(--text-primary);
  font-weight: 500;
}

/* Copy Button - Enhanced Style */
.copy-btn {
  padding: var(--space-s) var(--space-m);
  background-color: var(--primary-color);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: var(--font-size-caption);
  font-weight: var(--font-weight-bold);
  line-height: 1;
  min-width: 120rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(44, 95, 45, 0.2);
}

.copy-btn:hover {
  background-color: var(--secondary-color);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(44, 95, 45, 0.3);
}

.copy-btn:after {
  display: none;
}

/* FAQ Styles */
.faq-item {
  margin-bottom: var(--space-l);
}

.faq-item:last-child {
  margin-bottom: 0;
}

.question {
  font-size: var(--font-size-body);
  color: var(--primary-color);
  font-weight: var(--font-weight-bold);
  margin-bottom: var(--space-s);
  line-height: 1.5;
}

.answer {
  font-size: var(--font-size-caption);
  color: var(--text-secondary);
  line-height: 1.6;
  padding-left: var(--space-m);
  border-left: 3rpx solid var(--background-color);
  background-color: var(--background-color);
  padding: var(--space-m);
  border-radius: 8rpx;
}