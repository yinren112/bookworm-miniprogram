page {
  background: var(--color-bg-soft);
}

.page-container {
  padding: var(--space-8);
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

.card-header {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  margin-bottom: var(--space-6);
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  border: var(--border-thick) solid var(--color-border);
  background: var(--color-bg-card);
}

.card-info {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.role-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.service-time {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.wechat-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-4);
}

.wechat-box {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  overflow: hidden;
}

.label {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.value {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.copy-action {
  width: 160rpx;
  flex: 0 0 auto;
}

.faq-section {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.section-header {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.faq-group {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.chat-bubble {
  border-radius: var(--radius-card);
  border: var(--border-thick) solid var(--color-border);
  background: var(--color-bg-card);
  padding: var(--space-6);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-main);
}

.chat-bubble.question {
  border-color: var(--color-juicy-blue);
}

.chat-bubble.answer {
  border-color: var(--color-border);
  color: var(--color-text-light);
}
