page {
  background-color: var(--color-bg-soft);
  padding-bottom: 40rpx;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.header-actions {
  display: flex;
  gap: 8rpx;
}

.header-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 150ms ease;
}

.header-icon-wrapper:active {
  background-color: rgba(0,0,0,0.05);
}

.header-icon {
  width: 48rpx;
  height: 48rpx;
  opacity: 1;
}

.main-scroll {
  flex: 1;
  height: 0;
  transform-origin: center center;
  transition: transform var(--duration-overlay) var(--ease-in-out-cubic), filter var(--duration-overlay) var(--ease-in-out-cubic);
  will-change: transform, filter;
}

.main-scroll.scale-down {
  transform: scale(0.92);
  filter: brightness(0.8);
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.study-card {
  background: var(--color-bg-card);
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.06);
  padding: 56rpx 36rpx;
  position: relative;
  box-sizing: border-box;
}

.content-wrapper {
  padding: var(--space-6);
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
  gap: var(--space-10);
}

.error-debug {
  margin-top: var(--space-4);
  text-align: center;
  font-size: var(--font-size-xs);
  color: var(--color-text-muted);
  word-break: break-all;
  padding: 0 var(--space-6);
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 48rpx;
}

.course-header--pressed {
  transform: scale(var(--motion-scale-press));
}

.course-info {
  display: flex;
  flex-direction: column;
}

.course-name {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--color-text-main);
  margin-bottom: var(--space-2);
  line-height: 1.1;
  letter-spacing: -0.5rpx;
}

.book-spine-decoration {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-right: 12rpx;
}

.spine-bar {
  width: 32rpx;
  height: 14rpx;
  border-radius: 4rpx;
  box-shadow: inset 0 -4rpx 8rpx rgba(0,0,0,0.1), 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.spine-red { background: #FF3B30; }
.spine-blue { background: #007AFF; }
.spine-green { background: #34C759; }

.course-icon {
  width: 96rpx;
  height: 96rpx;
}

.course-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.course-icon-img {
  width: 100%;
  height: 100%;
}

.course-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.45;
  flex: 0 0 auto;
}

.progress-section {
  margin-bottom: var(--space-12);
}
.action-area {
  display: flex;
  flex-direction: column;
  gap: var(--space-7);
}

/* Resume Session Card */
.resume-card {
  padding: 28rpx 32rpx;
  border-radius: 32rpx;
  border: 2rpx solid var(--color-border-shade);
  background: var(--color-bg-card);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.resume-card--pressed {
  transform: scale(var(--motion-scale-press));
}

.resume-card-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.resume-card-label {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.resume-card-detail {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-wrap: wrap;
}

.resume-card-type {
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-bold);
  color: var(--color-juicy-green-shade);
}

.resume-card-sep {
  font-size: var(--font-size-xs);
  color: var(--color-text-light);
}

.resume-card-course {
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 300rpx;
}

.resume-card-progress {
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 36rpx;
}

.section-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.heatmap-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 160rpx;
}

.day-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  flex: 1;
  padding: 12rpx 0;
}

.day-bar {
  width: 32rpx;
  border-radius: 20rpx;
  background-color: var(--color-bg-soft);
  height: 12rpx;
  transition: all var(--duration-normal) var(--ease-bouncy);
}

.day-label {
  font-size: 22rpx;
  color: var(--color-text-light);
  font-weight: 700;
}

.day-bar.level-0 { height: 12rpx; background-color: var(--color-heat-0); }
.day-bar.level-1 { height: 30%; background-color: var(--color-heat-1); }
.day-bar.level-2 { height: 50%; background-color: var(--color-heat-2); }
.day-bar.level-3 { height: 75%; background-color: var(--color-heat-3); }
.day-bar.level-4 { height: 100%; background-color: var(--color-heat-4); }

.study-card--pressed {
  transform: scale(var(--motion-scale-press));
}

.footer-slogan {
  text-align: center;
  margin-top: 32rpx;
  opacity: 0.3;
}

.footer-slogan text {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.section-link {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: var(--color-bg-soft);
  border: none;
}

.section-link text {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--color-text-light);
}

.section-link-arrow {
  width: 26rpx;
  height: 26rpx;
  opacity: 0.45;
}

.course-chip-scroll {
  width: 100%;
}

.course-chip-row {
  display: flex;
  gap: var(--space-4);
  padding-bottom: 8rpx;
}

.course-chip {
  min-width: 310rpx;
  max-width: 360rpx;
  height: 210rpx;
  padding: 32rpx;
  border-radius: 32rpx;
  border: var(--border-thin) solid var(--color-border-shade);
  background: var(--color-bg-card);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.course-chip.active {
  border-color: var(--color-juicy-green);
}

.course-chip.add {
  border-style: dashed;
  opacity: 0.9;
}

.course-chip--pressed {
  transform: scale(var(--motion-scale-press));
}

.course-chip-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.course-chip-title {
  font-size: 26rpx;
  font-weight: 800;
  color: var(--color-text-main);
  line-height: 1.2;
}

.course-chip-sub {
  font-size: 22rpx;
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.discover-block {
  margin-top: var(--space-6);
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.discover-header {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.discover-title {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.discover-sub {
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.discover-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-4);
  padding: 32rpx;
  border-radius: 32rpx;
  border: var(--border-thin) solid var(--color-border-shade);
  background: var(--color-bg-card);
}

.discover-item--pressed {
  transform: scale(var(--motion-scale-press));
}

.discover-left {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  min-width: 0;
}

.discover-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.discover-item-title {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
  line-height: 1.2;
}

.discover-item-desc {
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-light);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 520rpx;
}

.discover-arrow {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.45;
  flex: 0 0 auto;
}

.course-picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 10000;
  opacity: 0;
  visibility: hidden;
  transition: opacity var(--duration-overlay) var(--ease-standard), visibility var(--duration-overlay) var(--ease-standard);
}

.course-picker-overlay.visible {
  opacity: 1;
  visibility: visible;
}

.course-picker-modal {
  width: 100%;
  background: var(--color-bg-card);
  border-radius: 32rpx 32rpx 0 0;
  border: none;
  box-shadow: 0 -4rpx 40rpx rgba(0,0,0,0.08);
  padding: var(--space-8);
  padding-bottom: calc(var(--space-8) + env(safe-area-inset-bottom));
  transform: translateY(100%) scale(0.98);
  transition: transform var(--duration-overlay) var(--ease-standard);
  will-change: transform;
  max-height: 85vh;
  overflow-y: auto;
}

.course-picker-overlay.visible .course-picker-modal {
  transform: translateY(0) scale(1);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-6);
}

.modal-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.close-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  border: var(--border-thin) solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-bg-card);
}

.close-btn text {
  font-size: var(--font-size-md);
  color: var(--color-text-light);
}

.course-search {
  width: 100%;
  height: 84rpx;
  border-radius: 32rpx;
  border: var(--border-thin) solid var(--color-border);
  background: var(--color-bg-card);
  padding: 0 22rpx;
  box-sizing: border-box;
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-main);
  margin-bottom: var(--space-6);
}

.course-search__placeholder {
  color: var(--color-text-muted);
  opacity: 0.75;
}

.picker-section {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  margin-bottom: var(--space-8);
}

.picker-section-header {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.picker-section-title {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.picker-clear {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: var(--color-bg-soft);
  border: none;
}

.picker-clear text {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--color-text-light);
}

.picker-item {
  padding: 32rpx;
  border-radius: 32rpx;
  border: var(--border-thin) solid var(--color-border-shade);
  background: var(--color-bg-card);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.picker-item.selected {
  border-color: var(--color-juicy-green);
}

.picker-item-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.picker-item-title {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
  line-height: 1.2;
}

.picker-item-sub {
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.picker-empty {
  padding: 20rpx;
  text-align: center;
  color: var(--color-text-light);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
}

/* Skeleton Screen */
.skel-wrapper {
  animation: pageFadeIn 0.3s var(--ease-out-expo) both;
}

.skel-title {
  width: 280rpx;
  height: 44rpx;
  margin-bottom: var(--space-4);
}

.skel-stat-split {
  display: flex;
  gap: var(--space-4);
  margin-top: var(--space-2);
}

.skel-stat {
  width: 120rpx;
  height: 32rpx;
}

.skel-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
}

.skel-progress {
  width: 100%;
  height: 24rpx;
  margin-bottom: var(--space-8);
  border-radius: 12rpx;
}

.skel-cta {
  width: 100%;
  height: 96rpx;
  border-radius: var(--radius-btn);
}

.skel-section-title {
  width: 180rpx;
  height: 36rpx;
  margin-bottom: 36rpx;
}

.skel-heatmap-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 160rpx;
}

.skel-bar {
  width: 32rpx;
  border-radius: 20rpx;
}

/* Heatmap Tooltip */
.day-bar-wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
}

.heatmap-tooltip {
  position: absolute;
  bottom: calc(100% + 8rpx);
  white-space: nowrap;
  padding: 8rpx 16rpx;
  border-radius: var(--radius-sm);
  background: var(--color-text-main);
  animation: tooltipPop 0.2s var(--ease-bouncy) both;
  z-index: 10;
}

.heatmap-tooltip text {
  font-size: 20rpx;
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-inverse);
}

@keyframes tooltipPop {
  0% { opacity: 0; transform: scale(0.8) translateY(4rpx); }
  100% { opacity: 1; transform: scale(1) translateY(0); }
}

/* Welcome Modal (Full-screen) */
.welcome-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10001;
  opacity: 0;
  visibility: hidden;
  transition: opacity var(--duration-overlay) var(--ease-standard), visibility var(--duration-overlay) var(--ease-standard);
}
.welcome-overlay.visible {
  opacity: 1;
  visibility: visible;
}
.welcome-modal {
  width: 600rpx;
  background: var(--color-bg-card);
  border-radius: 48rpx;
  padding: 64rpx 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-8);
  text-align: center;
  transform: translateY(40rpx) scale(0.95);
  transition: transform var(--duration-overlay) var(--ease-standard);
}
.welcome-overlay.visible .welcome-modal {
  transform: translateY(0) scale(1);
}
.welcome-icon-row {
  margin-bottom: var(--space-2);
}
.welcome-icon-text {
  font-size: 80rpx;
}
.welcome-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}
.welcome-desc {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
  line-height: 1.6;
  white-space: pre-line;
}
