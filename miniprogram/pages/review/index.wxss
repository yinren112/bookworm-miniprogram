/* pages/review/index.wxss */
/* 复习首页 */

.container {
  padding: 32rpx;
  min-height: 100vh;
  background: #f3fbf6;
}

.header-section {
  margin-bottom: 24rpx;
}

.greeting-text {
  display: block;
  font-size: 44rpx;
  font-weight: 800;
  color: #1f2a24;
  margin-bottom: 8rpx;
}

.greeting-sub {
  font-size: 26rpx;
  color: #7a8f83;
}

.clay-card {
  background: #ffffff;
  border-radius: 28rpx;
  box-shadow: 0 16rpx 30rpx rgba(44, 95, 45, 0.08);
  padding: 28rpx;
  margin-bottom: 24rpx;
}

.clay-card-sm {
  background: #ffffff;
  border-radius: 22rpx;
  box-shadow: 0 12rpx 24rpx rgba(44, 95, 45, 0.06);
  padding: 22rpx;
  margin-bottom: 16rpx;
}

.dashboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.date-badge {
  background: rgba(44, 95, 45, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
}

.date-text {
  font-size: 22rpx;
  color: #2c5f2d;
}

.streak-chip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 193, 7, 0.18);
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #b45309;
}

.streak-icon {
  width: 28rpx;
  height: 28rpx;
}

.metric-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.metric-item {
  background: #f5faf6;
  border-radius: 18rpx;
  padding: 16rpx;
}

.metric-value {
  font-size: 34rpx;
  font-weight: 700;
  color: #2c3e35;
}

.metric-label {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #7a8f83;
}

.cta-btn {
  width: 100%;
  background: #2c5f2d;
  color: #ffffff;
  border-radius: 999rpx;
  padding: 16rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 12rpx;
}

.cta-btn::after {
  border: none;
}

.cta-btn.highlight {
  box-shadow: 0 0 0 4rpx rgba(44, 95, 45, 0.2);
}

.cta-btn.ghost {
  background: #ffffff;
  color: #2c5f2d;
  border: 2rpx solid rgba(44, 95, 45, 0.25);
}

.cta-btn.subtle {
  background: #fff7ed;
  color: #b45309;
}

.course-section,
.heatmap-section,
.recommend-list {
  margin-top: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2a24;
  margin-bottom: 16rpx;
}

.course-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.course-summary {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.course-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e35;
}

.course-progress {
  font-size: 22rpx;
  color: #7a8f83;
}

.course-action {
  font-size: 24rpx;
  color: #2c5f2d;
}

.empty-wrap {
  margin-top: 16rpx;
}

.heatmap-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.heatmap-cell {
  width: 32rpx;
  height: 32rpx;
  border-radius: 8rpx;
  background: #e8f5e9;
}

.heatmap-cell.level-1 {
  background: #b7e4c7;
}

.heatmap-cell.level-2 {
  background: #74c69d;
}

.heatmap-cell.level-3 {
  background: #40916c;
}

.heatmap-hint {
  display: block;
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #7a8f83;
}
