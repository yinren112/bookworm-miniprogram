/* pages/review/index.wxss */
/* 复习首页 - Light Clay Design */

.container {
  padding: 32rpx;
  min-height: 100vh;
  background: var(--bg-primary, #F3FBF6);
  display: flex;
  flex-direction: column;
}

/* 头部问候 */
.header-section {
  margin-bottom: 32rpx;
  padding: 16rpx 8rpx;
}

.greeting-text {
  display: block;
  font-size: 44rpx;
  font-weight: 800;
  color: #2C3E35;
  margin-bottom: 8rpx;
}

.greeting-sub {
  font-size: 28rpx;
  color: #8FA396;
}

/* 通用粘土卡片 - Hero Style */
.clay-card {
  background: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 
    12rpx 12rpx 24rpx rgba(44, 95, 45, 0.08), 
    -8rpx -8rpx 20rpx rgba(255, 255, 255, 1), 
    inset 2rpx 2rpx 4rpx rgba(44, 95, 45, 0.05);
  margin-bottom: 32rpx;
  padding: 32rpx;
  position: relative;
  overflow: hidden;
}

/* Sm Card for lists */
.clay-card-sm {
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 
    8rpx 8rpx 16rpx rgba(44, 95, 45, 0.06), 
    -6rpx -6rpx 16rpx rgba(255, 255, 255, 0.9), 
    inset 1rpx 1rpx 3rpx rgba(44, 95, 45, 0.03);
  padding: 24rpx;
  margin-bottom: 24rpx;
}

/* --- Hero Card --- */
.hero-card {
  background: linear-gradient(145deg, #FFFFFF 0%, #F1F8F4 100%);
}

.hero-header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 16rpx;
}

.date-badge {
  background: rgba(44, 95, 45, 0.08);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.date-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #2c5f2d;
}

.hero-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.progress-ring-container {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 简单的 CSS 圆环模拟 */
.progress-circle {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 12rpx solid #E8F5E9;
  border-top-color: #2c5f2d; /* 简单的进度展示 */
  border-right-color: #2c5f2d;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transform: rotate(-45deg); /* 让缺口在下面一点 */
  box-shadow: inset 2rpx 2rpx 6rpx rgba(0,0,0,0.05);
}

.progress-number {
  font-size: 44rpx;
  font-weight: 800;
  color: #2c5f2d;
  transform: rotate(45deg); /* 文字转回来 */
  line-height: 1;
}

.progress-label {
  font-size: 20rpx;
  color: #8FA396;
  transform: rotate(45deg);
  margin-top: 4rpx;
}

.hero-stats {
  flex: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-left: 32rpx;
}

.hero-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.h-stat-num {
  font-size: 36rpx;
  font-weight: 700;
  color: #2C3E35;
}

.h-stat-label {
  font-size: 22rpx;
  color: #8FA396;
  margin-top: 4rpx;
}

.h-divider {
  width: 2rpx;
  height: 40rpx;
  background: rgba(44, 95, 45, 0.1);
}

.hero-actions {
  display: flex;
  gap: 20rpx;
}

.hero-btn {
  flex: 1;
  height: 96rpx;
  border-radius: 20rpx;
  border: none;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.2s ease;
}

.hero-btn::after { border: none; }

.hero-btn:active { transform: scale(0.96); }

.hero-btn.primary {
  background: linear-gradient(135deg, #2c5f2d 0%, #467a48 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 20rpx rgba(44, 95, 45, 0.25);
}

.hero-btn.secondary {
  background: #FFFFFF;
  color: #FF9800;
  box-shadow: 
    4rpx 4rpx 12rpx rgba(0,0,0,0.05),
    inset 0 0 0 2rpx #FFF3E0;
}

/* --- Streak Section --- */
.streak-section {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #FFFDE7; /* Light Yellow tint */
}

.streak-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 152, 0, 0.15);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: inset 1rpx 1rpx 2rpx rgba(0,0,0,0.05);
}

.streak-emoji {
  font-size: 40rpx;
}

.streak-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.streak-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #FF9800;
}

.streak-sub {
  font-size: 22rpx;
  color: #8FA396;
  margin-top: 4rpx;
}

.streak-arrow {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #FF9800;
}

/* --- Course List --- */
.courses-section {
  flex: 1;
}

.section-heading {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #2C3E35;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.course-card {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  transition: all 0.2s ease;
}

.course-card:active {
  transform: scale(0.98);
}

.course-icon-placeholder {
  width: 88rpx;
  height: 88rpx;
  background: #E8F5E9;
  color: #2c5f2d;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 700;
  margin-right: 24rpx;
  box-shadow: inset 1rpx 1rpx 3rpx rgba(0,0,0,0.05);
}

.course-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.course-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2C3E35;
  margin-bottom: 8rpx;
}

.course-tags {
  display: flex;
}

.mini-tag {
  font-size: 20rpx;
  color: #8FA396;
  background: #F5F5F5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.course-enter-btn {
  padding: 12rpx 24rpx;
  background: rgba(44, 95, 45, 0.08); /* Transparent Green */
  border-radius: 14rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #2c5f2d;
}

/* Empty State & Loading */
.empty-state, .loading-state {
  padding: 48rpx;
  text-align: center;
}

.empty-text, .loading-text {
  font-size: 28rpx;
  color: #B8C4BC;
}


/* Heatmap Styles - Redesigned */
.streak-section {
  padding: 32rpx;
}

.streak-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 28rpx;
}

.streak-title-group {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.streak-days {
  font-size: 56rpx;
  font-weight: 800;
  color: #FF9800;
  line-height: 1;
}

.streak-label {
  font-size: 28rpx;
  color: var(--text-secondary, #8FA396);
}

.streak-sub {
  font-size: 22rpx;
  color: var(--text-muted, #B8C4BC);
}

.heatmap-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
  justify-items: center;
  padding: 16rpx 24rpx;
  background: var(--bg-secondary, rgba(255,255,255,0.5));
  border-radius: 16rpx;
}

.heatmap-cell {
  width: 32rpx;
  height: 32rpx;
  border-radius: 8rpx;
  background: #E8F5E9;
  transition: transform 0.15s ease;
}

.heatmap-cell.level-0 { background: #E8F5E9; }
.heatmap-cell.level-1 { background: #A5D6A7; }
.heatmap-cell.level-2 { background: #66BB6A; }
.heatmap-cell.level-3 { background: #43A047; }

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .heatmap-grid {
    background: rgba(0,0,0,0.2);
  }
  .heatmap-cell.level-0 { background: #2D3A30; }
  .heatmap-cell.level-1 { background: #3D5241; }
  .heatmap-cell.level-2 { background: #4E6A52; }
  .heatmap-cell.level-3 { background: #66BB6A; }
}

.recommend-divider {
  margin: 32rpx 0 16rpx;
  text-align: left;
  font-size: 26rpx;
  font-weight: 600;
  color: #8FA396;
  padding-left: 8rpx;
}

