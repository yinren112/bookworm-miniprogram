/* pages/order-confirm/index.wxss */

/* Container */
.container {
  min-height: 100vh;
  padding: var(--space-l);
  padding-bottom: 180rpx;
}

/* Card Title */
.card-title {
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  margin-bottom: var(--space-m);
  color: var(--text-primary);
}

/* Book Item Layout */
.book-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: var(--space-m);
  background-color: var(--background-color);
  border-radius: 16rpx;
  border: 1rpx solid var(--border-color);
}

.book-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-right: var(--space-m);
}

.book-title {
  font-size: var(--font-size-body);
  font-weight: var(--font-weight-bold);
  margin-bottom: var(--space-xs);
  color: var(--text-primary);
  line-height: 1.3;
}

.book-author, 
.book-condition {
  font-size: var(--font-size-caption);
  color: var(--text-secondary);
  margin-bottom: var(--space-xs);
  font-weight: var(--font-weight-normal);
  line-height: 1.4;
}

/* Price Display */
.book-price {
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
  margin-left: auto;
  align-self: flex-start;
}

/* Summary Items */
.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: var(--font-size-body);
  margin-bottom: var(--space-m);
  padding: var(--space-s) var(--space-m);
  background-color: var(--background-color);
  border-radius: 12rpx;
  border: 1rpx solid var(--border-color);
}

.summary-item:last-child {
  margin-bottom: 0;
  font-weight: var(--font-weight-bold);
  background-color: var(--card-background);
  border-color: var(--primary-color);
}

.summary-item text:first-child {
  color: var(--text-secondary);
  font-weight: var(--font-weight-normal);
}

.summary-item text:last-child {
  color: var(--text-primary);
  font-weight: var(--font-weight-bold);
}

/* Footer Bar */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--card-background);
  padding: var(--space-m) var(--space-l);
  padding-bottom: calc(var(--space-m) + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  border-top: 1rpx solid var(--border-color);
}

/* Total Section */
.total-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.total-section text:first-child {
  font-size: var(--font-size-body);
  color: var(--text-secondary);
  font-weight: var(--font-weight-normal);
}

.total-price {
  font-size: 44rpx;
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
  margin-top: var(--space-xs);
}

/* Button styles now handled by global .btn .btn-primary classes */
/* Custom width for order confirm button in footer layout */
.footer-bar .btn {
  width: 280rpx;
}

/* Error State */
.error-message {
  text-align: center;
  color: var(--text-secondary);
  padding: var(--space-xl) var(--space-l);
  font-size: var(--font-size-body);
  background: var(--card-background);
  border-radius: 24rpx;
  margin: var(--space-xl) var(--space-m);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* Responsive Design */
@media screen and (min-width: 768px) {
  .container {
    max-width: 600rpx;
    margin: 0 auto;
    padding: var(--space-xl) var(--space-l) 200rpx var(--space-l);
  }
  
  .footer-bar {
    padding: var(--space-l) var(--space-xl);
    padding-bottom: calc(var(--space-l) + env(safe-area-inset-bottom));
  }
}