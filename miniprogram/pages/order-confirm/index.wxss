/* pages/order-confirm/index.wxss */

.page-container {
  min-height: 100vh;
  padding: var(--space-l);
  padding-bottom: 200rpx; /* Space for footer */
  position: relative;
  overflow-x: hidden;
}

/* Ticket Card Style */
.ticket-card {
  background: #fff;
  border-radius: var(--radius-l);
  box-shadow: var(--shadow-clay-out);
  margin-bottom: 40rpx;
  overflow: hidden;
  position: relative;
}

.ticket-main {
  padding: 40rpx;
  display: flex;
  align-items: center;
}

.book-cover {
  width: 140rpx;
  height: 190rpx;
  border-radius: 12rpx;
  box-shadow: 8rpx 8rpx 16rpx rgba(0,0,0,0.1);
  margin-right: 32rpx;
  object-fit: cover;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.book-title {
  font-size: 34rpx;
  font-weight: 800;
  color: var(--clay-text-main);
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.book-author {
  font-size: 26rpx;
  color: var(--clay-text-light);
  margin-bottom: 20rpx;
}

.condition-tag {
  display: inline-block;
  background: #E2F0CB;
  color: #2F855A;
  font-size: 22rpx;
  font-weight: 800;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  align-self: flex-start;
}

/* Dotted Divider */
.ticket-divider {
  position: relative;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ticket-divider .line {
  width: 90%;
  border-top: 4rpx dashed #E2E8F0;
}

.half-circle {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background: var(--clay-bg); /* Should match page bg to look transparent */
  border-radius: 50%;
  top: 0;
  box-shadow: inset 2rpx 2rpx 4rpx rgba(0,0,0,0.05); /* Inner shadow for depth */
}

.half-circle.left { left: -20rpx; }
.half-circle.right { right: -20rpx; }

.ticket-stub {
  padding: 32rpx 40rpx 40rpx 40rpx;
  background: #FAFAFA;
}

.price-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.price-row:last-child { margin-bottom: 0; }

.price-row .label {
  font-size: 28rpx;
  color: var(--clay-text-light);
}

.price-row .value {
  font-size: 30rpx;
  color: var(--clay-text-main);
}

/* Tips Card */
.tips-card {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10rpx);
  border-radius: var(--radius-m);
  padding: 32rpx;
  border: 2rpx solid rgba(255,255,255,0.5);
}

.tips-title {
  font-size: 26rpx;
  font-weight: 800;
  color: #D69E2E; /* Muted Orange */
  margin-bottom: 16rpx;
}

.tips-content {
  font-size: 24rpx;
  color: var(--clay-text-light);
  line-height: 1.6;
}

.highlight {
  color: #D69E2E;
  font-weight: 700;
}


/* Glass Footer */
.glass-footer {
  position: fixed;
  bottom: 40rpx;
  left: 32rpx;
  right: 32rpx;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20rpx);
  border-radius: 48rpx;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 
    0 20rpx 40rpx rgba(0,0,0,0.1),
    inset 0 2rpx 4rpx rgba(255,255,255,0.8);
  border: 1rpx solid rgba(255,255,255,0.6);
  z-index: 100;
}

.total-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.total-label {
  font-size: 22rpx;
  color: var(--clay-text-light);
  margin-bottom: 4rpx;
}

.total-price-box {
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 800;
  margin-right: 4rpx;
}

.amount {
  font-size: 48rpx;
  color: var(--primary-color);
  font-weight: 900;
}

.pay-btn {
  background: var(--clay-text-main);
  color: #fff;
  border-radius: 32rpx;
  padding: 0 64rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-weight: 800;
  box-shadow: 8rpx 8rpx 20rpx rgba(44, 62, 53, 0.3);
  border: none;
  margin: 0;
}

.pay-btn:active {
  transform: scale(0.96);
}

.pay-btn[disabled] {
  opacity: 0.6;
  background: var(--clay-text-light);
}

.error-message {
  text-align: center;
  color: var(--clay-text-light);
  padding: 60rpx;
}
