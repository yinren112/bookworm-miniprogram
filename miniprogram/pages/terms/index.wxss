/* miniprogram/pages/terms/index.wxss */
.terms-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 32rpx 24rpx 40rpx;
  box-sizing: border-box;
  background: #f7f8f3;
}

.page-header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f3b2c;
}

.subtitle {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #5b6f63;
}

.tab-bar {
  display: flex;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 8rpx 20rpx rgba(31, 59, 44, 0.08);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #4d5b53;
  border-radius: 12rpx;
}

.tab.active {
  color: #ffffff;
  background: #2c5f2d;
}

.content {
  flex: 1;
  margin-top: 24rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(31, 59, 44, 0.06);
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f3b2c;
}

.paragraph {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #4a5b52;
  line-height: 1.7;
}

.actions {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.primary {
  background: #2c5f2d;
  color: #ffffff;
  border-radius: 16rpx;
}

.secondary {
  background: #ffffff;
  color: #2c5f2d;
  border: 2rpx solid #2c5f2d;
  border-radius: 16rpx;
}
