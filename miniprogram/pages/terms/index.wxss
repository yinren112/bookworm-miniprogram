/* miniprogram/pages/terms/index.wxss */
.terms-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: var(--space-8) var(--space-6) calc(var(--space-10) + env(safe-area-inset-bottom));
  box-sizing: border-box;
  background: var(--color-bg-soft);
}

.page-header {
  margin-bottom: 24rpx;
}

.title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.subtitle {
  display: block;
  margin-top: 8rpx;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.tab-bar {
  display: flex;
  background: var(--color-bg-card);
  border-radius: var(--radius-card);
  padding: var(--space-2);
  border: var(--border-thick) solid var(--color-border);
  box-sizing: border-box;
}

.tab {
  flex: 1;
  text-align: center;
  padding: var(--space-4) 0;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-light);
  border-radius: calc(var(--radius-card) - var(--space-2));
}

.tab.active {
  color: var(--color-text-inverse);
  background: var(--primary-color);
}

.content-stack {
  flex: 1;
  min-height: 0;
  margin-top: 24rpx;
}

.content-scroll {
  height: 100%;
  padding: 24rpx;
  background: var(--color-bg-card);
  border-radius: var(--radius-card);
  border: var(--border-thick) solid var(--color-border);
  box-sizing: border-box;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.paragraph {
  margin-top: 12rpx;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-main);
  line-height: 1.7;
}

.actions {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.primary {
  background: var(--primary-color);
  color: var(--color-text-inverse);
  border-radius: var(--radius-card);
  border: 0;
  font-weight: var(--font-weight-heavy);
}

.secondary {
  background: var(--color-bg-card);
  color: var(--primary-color);
  border: var(--border-thick) solid var(--primary-color);
  border-radius: var(--radius-card);
  font-weight: var(--font-weight-heavy);
}
