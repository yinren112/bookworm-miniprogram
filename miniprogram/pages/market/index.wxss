/* pages/market/index.wxss */
@import "../../templates/search-bar.wxss";

/* Modern Container with Gradient Background */
.container {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  padding: 0;
}

/* Modern Header with Better Typography */
.header-title { 
  font-size: 52rpx; 
  font-weight: 700; 
  margin: 48rpx 0 32rpx 0; 
  text-align: center;
  color: var(--text-color-primary);
  letter-spacing: -0.8rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* Enhanced State Messages */
.empty-state, .loading-indicator, .error-message { 
  text-align: center; 
  color: var(--text-color-secondary); 
  padding: 120rpx 32rpx;
  font-size: 30rpx;
  line-height: 1.5;
}

.empty-state {
  background: rgba(255, 255, 255, 0.6);
  border-radius: 24rpx;
  margin: 40rpx 24rpx;
  backdrop-filter: blur(10rpx);
}

/* Modern Book Grid with Better Spacing */
.book-grid {
  column-count: 2;
  column-gap: 24rpx;
  animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  padding: 0 24rpx 40rpx 24rpx;
}

.book-card-navigator {
  break-inside: avoid;
  margin-bottom: 24rpx;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.book-card-navigator:active {
  transform: scale(0.98);
}

/* Enhanced Book Cards with Modern Design */
.book-card { 
  padding: 0; 
  overflow: hidden; 
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  box-shadow: 
    0 4rpx 20rpx rgba(44, 95, 45, 0.08),
    0 1rpx 3rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.book-card:hover {
  box-shadow: 
    0 8rpx 32rpx rgba(44, 95, 45, 0.15),
    0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

.book-cover { 
  width: 100%; 
  background-color: var(--border-color);
  border-radius: 16rpx 16rpx 0 0;
  aspect-ratio: 3/4;
  object-fit: cover;
}

/* Modern Book Info Layout */
.book-info { 
  padding: 24rpx 20rpx 28rpx 20rpx;
  position: relative;
}

.book-title { 
  font-size: 30rpx; 
  font-weight: 600; 
  display: block;
  color: var(--text-color-primary);
  line-height: 1.3;
  margin-bottom: 8rpx;
  max-height: 78rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.book-author { 
  font-size: 26rpx; 
  color: var(--text-color-secondary); 
  margin: 0 0 16rpx 0;
  font-weight: 400;
}

.book-meta { 
  font-size: 24rpx; 
  color: var(--text-color-secondary); 
  margin-bottom: 20rpx;
  background: rgba(44, 95, 45, 0.04);
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid var(--primary-color);
}

.book-meta text { 
  display: block;
  line-height: 1.4;
}

.book-price { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: var(--primary-color);
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  position: relative;
}

.book-price::before {
  content: 'Â¥';
  font-size: 28rpx;
  margin-right: 2rpx;
  font-weight: 500;
  color: var(--text-color-secondary);
  background: none;
  -webkit-text-fill-color: var(--text-color-secondary);
}

/* Modern Skeleton Styles */
.skeleton-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  padding: 0 24rpx;
}

.skeleton-item {
  background: rgba(255, 255, 255, 0.7);
  border-radius: 20rpx;
  padding: 0;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
  animation: skeletonPulse 1.5s ease-in-out infinite;
}

.skeleton-image {
  width: 100%;
  height: 240rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeletonShimmer 2s infinite;
  margin-bottom: 0;
}

.skeleton-text {
  width: 100%;
  height: 32rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeletonShimmer 2s infinite;
  border-radius: 6rpx;
  margin: 20rpx 20rpx 16rpx 20rpx;
}

.skeleton-text.short {
  width: 60%;
  margin-bottom: 20rpx;
}

/* Modern Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes skeletonPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.8; }
}

@keyframes skeletonShimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

/* Responsive adjustments for larger screens */
@media screen and (min-width: 768px) {
  .book-grid {
    column-count: 3;
    column-gap: 32rpx;
  }
  
  .container {
    max-width: 1200rpx;
    margin: 0 auto;
  }
}