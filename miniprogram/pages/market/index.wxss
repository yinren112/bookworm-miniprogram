/* pages/market/index.wxss */
@import "../../templates/search-bar.wxss";

/* Page Header */
.header-title { 
  font-size: var(--font-size-display);
  font-weight: var(--font-weight-bold);
  margin: var(--space-xl) 0 var(--space-l) 0;
  text-align: center;
  color: var(--text-primary);
}

/* State Messages */
.empty-state, 
.loading-indicator, 
.error-message { 
  text-align: center; 
  color: var(--text-secondary); 
  padding: var(--space-xl) var(--space-l);
  font-size: var(--font-size-body);
}

/* Book Grid Layout */
.book-grid {
  column-count: 2;
  column-gap: var(--space-m);
  padding: 0 var(--space-l) var(--space-xl) var(--space-l);
}

.book-card-navigator {
  break-inside: avoid;
  margin-bottom: var(--space-m);
  transition: opacity 0.2s;
}

.book-card-navigator:active {
  opacity: 0.8;
}

/* Book Cards - Use Global Card Class */
.book-card { 
  padding: 0; 
  overflow: hidden;
  /* Inherits from global .card class */
}

.book-cover { 
  width: 100%; 
  background-color: var(--border-color);
  border-radius: 16rpx 16rpx 0 0;
  aspect-ratio: 3/4;
  object-fit: cover;
}

/* Book Info */
.book-info { 
  padding: var(--space-m);
}

.book-title { 
  font-size: var(--font-size-body);
  font-weight: var(--font-weight-bold);
  display: block;
  color: var(--text-primary);
  line-height: 1.3;
  margin-bottom: var(--space-xs);
  max-height: 78rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.book-author { 
  font-size: var(--font-size-caption);
  color: var(--text-secondary);
  margin: 0 0 var(--space-s) 0;
  font-weight: var(--font-weight-normal);
}

.book-meta { 
  font-size: var(--font-size-caption);
  color: var(--text-secondary);
  margin-bottom: var(--space-m);
  padding: var(--space-s);
  background-color: var(--background-color);
  border-radius: 8rpx;
  border-left: 4rpx solid var(--primary-color);
}

.book-meta text { 
  display: block;
  line-height: 1.4;
}

.book-price { 
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
}


/* Responsive */
@media screen and (min-width: 768px) {
  .book-grid {
    column-count: 3;
    column-gap: var(--space-l);
  }
  
  .container {
    max-width: 1200rpx;
    margin: 0 auto;
  }
}