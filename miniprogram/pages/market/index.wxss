@import "../../templates/search-bar.wxss";

page {
  background: var(--color-bg-soft);
}

.market-container {
  min-height: 100vh;
  padding: 0;
}

.search-section {
  padding-top: var(--space-6);
}

.section-title {
  padding: 0 var(--space-8) var(--space-6) var(--space-8);
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.recommendations-section {
  margin-bottom: var(--space-10);
}

.recommendations-scroll {
  white-space: nowrap;
  padding: 0 var(--space-8);
  box-sizing: border-box;
  width: 100%;
}

.hero-card {
  display: inline-block;
  width: 560rpx;
  background: var(--color-bg-card);
  border-radius: var(--radius-card);
  border: var(--border-thick) solid var(--color-border);
  padding: var(--space-8);
  margin-right: var(--space-8);
  position: relative;
  overflow: hidden;
  vertical-align: top;
  white-space: normal;
  box-sizing: border-box;
}

.hero-text {
  width: 70%;
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.hero-badge {
  display: inline-flex;
  border-radius: var(--radius-pill);
  border: var(--border-thick) solid var(--color-juicy-yellow-shade);
  color: var(--color-juicy-yellow-shade);
  padding: 6rpx 16rpx;
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-heavy);
  align-self: flex-start;
}

.hero-h1 {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
  line-height: 1.2;
}

.hero-sub {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.hero-price {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.book-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-6);
  padding: 0 var(--space-8) var(--space-10) var(--space-8);
}

.book-card {
  background: var(--color-bg-card);
  border-radius: var(--radius-card);
  border: var(--border-thick) solid var(--color-border);
  padding: var(--space-6);
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.card-img-container {
  width: 100%;
  height: 312rpx;
  background: var(--color-bg-soft);
  border-radius: var(--radius-card);
  border: var(--border-thick) solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.book-title {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
  line-height: 1.3;
}

.book-author {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}
