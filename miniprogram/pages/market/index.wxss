/* pages/market/index.wxss */
@import "../../templates/search-bar.wxss";

/* Page Container */
.market-container {
  background-color: var(--clay-bg);
  min-height: 100vh;
  padding: 0; /* Remove default padding, handle per section */
}

/* Search Section */
.search-section {
  padding-top: var(--space-m);
}

/* Section Title */
.section-title {
  padding: 0 var(--space-l) var(--space-m) var(--space-l);
  font-size: 40rpx;
  font-weight: 800;
  color: var(--clay-text-main);
  letter-spacing: -1rpx;
}


/* Hero Card (Recommendations) */
.recommendations-section {
  margin-bottom: var(--space-xl);
}

.recommendations-scroll {
  white-space: nowrap;
  padding: 0 var(--space-l);
  box-sizing: border-box;
  width: 100%;
  height: 380rpx; /* Adjust based on card height */
}

.hero-card {
  display: inline-block;
  width: 560rpx;
  height: 300rpx;
  background: #fff;
  border-radius: 48rpx;
  padding: 32rpx;
  margin-right: 32rpx;
  box-shadow: var(--shadow-clay-out);
  position: relative;
  overflow: hidden;
  vertical-align: top;
  white-space: normal; /* Reset for internal text */
  box-sizing: border-box;
}

.hero-bg-circle {
  position: absolute;
  width: 240rpx; height: 240rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #E0C3FC 0%, #8EC5FC 100%);
  top: -60rpx; right: -40rpx;
  opacity: 0.4;
  filter: blur(30rpx);
  z-index: 1;
}

.hero-text {
  position: relative;
  z-index: 2;
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.hero-badge {
  display: inline-block;
  background: #FFE2E2;
  color: #FF6B6B;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 800;
  margin-bottom: 16rpx;
  align-self: flex-start;
}

.hero-h1 {
  font-size: 34rpx;
  font-weight: 800;
  margin-bottom: 8rpx;
  line-height: 1.2;
  color: var(--clay-text-main);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.hero-sub {
  font-size: 24rpx;
  color: var(--clay-text-light);
  margin-bottom: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hero-price {
  font-size: 32rpx;
  font-weight: 900;
  color: var(--clay-text-main);
}

.hero-img-box {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 160rpx;
  height: 220rpx;
  z-index: 2;
}

.hero-img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  box-shadow: 10rpx 10rpx 20rpx rgba(0,0,0,0.15);
  transform: rotate(-10deg);
  background-color: #f0f0f0;
}


/* Book Grid Layout */
.book-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-m);
  padding: 0 var(--space-l) var(--space-xl) var(--space-l);
}

.book-card-navigator {
  width: 100%;
}

/* Book Cards - Clay Style */
.book-card { 
  background: #fff;
  border-radius: var(--radius-l);
  padding: 24rpx;
  /* 增强阴影：更深、更远，模拟悬浮感 */
  box-shadow: 
    24rpx 24rpx 48rpx rgba(160, 180, 170, 0.4), 
    -16rpx -16rpx 48rpx rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: column;
  transition: transform 0.1s;
}

.book-card:active {
  transform: scale(0.98);
  /* 按下时阴影收缩 */
  box-shadow: 
    8rpx 8rpx 24rpx rgba(160, 180, 170, 0.4), 
    -8rpx -8rpx 24rpx rgba(255, 255, 255, 1);
}

.card-img-container {
  width: 100%;
  /* aspect-ratio 兼容性修正：使用固定高度 (基于 750rpx 栅格计算) */
  height: 312rpx; 
  background: #F7FAFC;
  border-radius: var(--radius-m);
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* 内部凹陷，像个展示台 */
  box-shadow: inset 6rpx 6rpx 12rpx rgba(0,0,0,0.03);
  position: relative;
  padding: 20rpx;
  box-sizing: border-box;
}

.book-cover { 
  width: 80%;
  height: 90%;
  border-radius: 8rpx;
  box-shadow: 8rpx 12rpx 20rpx rgba(0,0,0,0.15);
  object-fit: cover;
}

.card-content {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.book-title { 
  font-size: 28rpx;
  font-weight: 800;
  margin-bottom: 8rpx;
  color: var(--clay-text-main);
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.book-author { 
  font-size: 22rpx;
  color: var(--clay-text-light);
  margin-bottom: 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.book-price { 
  font-size: 32rpx;
  font-weight: 900;
  color: var(--clay-text-main);
}

.add-btn {
  width: 56rpx; 
  height: 56rpx;
  border-radius: 50%;
  background: #E2E8F0;
  display: flex; 
  align-items: center; 
  justify-content: center;
  font-weight: bold;
  color: var(--clay-text-main);
  font-size: 32rpx;
  box-shadow: 4rpx 4rpx 8rpx rgba(0,0,0,0.1);
}


/* State Messages */
.empty-state, 
.error-message { 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center; 
  color: var(--clay-text-light); 
  padding: var(--space-xl) var(--space-l);
  font-size: var(--font-size-body);
}

.empty-img {
  width: 300rpx;
  margin-bottom: var(--space-m);
  opacity: 0.8;
}

.empty-text {
  font-weight: 700;
}
