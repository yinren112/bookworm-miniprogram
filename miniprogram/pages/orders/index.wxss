/* pages/orders/index.wxss */

.header-title { 
  font-size: var(--font-size-display); 
  font-weight: var(--font-weight-bold); 
  margin-bottom: var(--space-m); 
  color: var(--text-primary);
}

.empty-state, .loading-indicator, .error-message { 
  text-align: center; 
  color: var(--text-secondary); 
  padding: var(--space-xl) 0; 
  font-size: var(--font-size-body);
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-m);
  margin: var(--space-l);
}

/* Order Cards - Use Global Card Style */
.order-card { 
  background-color: var(--card-background);
  border-radius: 24rpx;
  padding: var(--space-l);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  cursor: pointer;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-m);
}

/* Order Status - Use Global Status Tag */
.order-status {
  /* This should use global .status-tag classes in WXML:
     class="status-tag {{ order.status === 'COMPLETED' ? 'success' : order.status === 'PENDING_PAYMENT' ? 'error' : 'warning' }}"
  */
}

.order-date { 
  font-size: var(--font-size-caption); 
  color: var(--text-secondary); 
}

.order-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.book-summary {
  flex: 1;
  margin-right: var(--space-m);
}

.first-book {
  font-size: var(--font-size-body);
  color: var(--text-primary);
  font-weight: var(--font-weight-bold);
}

.more-books {
  font-size: var(--font-size-caption);
  color: var(--text-secondary);
}

.order-total {
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
}