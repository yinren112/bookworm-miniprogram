/* pages/orders/index.wxss */

.order-page {
  background-color: var(--clay-bg);
  min-height: 100vh;
  padding: var(--space-l);
}

/* 页面标题 */
.header-title { 
  font-size: 48rpx; 
  font-weight: 900; 
  margin-bottom: var(--space-xl); 
  color: var(--clay-text-main);
  letter-spacing: -1rpx;
}

/* 列表容器 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  padding-bottom: 60rpx;
}

/* 通用卡片动画 */
.order-card {
  transition: transform 0.1s;
  position: relative;
}

.order-card:active {
  transform: scale(0.98);
}


/* --------------------------------------- */
/* 1. 待取货凭证 (Receipt Card) - The Hero */
/* --------------------------------------- */
.receipt-card {
  background: #fff;
  /* 不设置 border-radius，依靠伪元素做锯齿 */
  filter: drop-shadow(0 8rpx 24rpx rgba(166, 180, 200, 0.3));
  margin-bottom: 20rpx;
  position: relative;
  /* 稍微旋转一点，像随手放的票据 */
  transform: rotate(-1deg);
}

/* 锯齿边缘生成器 */
.receipt-edge {
  height: 16rpx;
  width: 100%;
  background-size: 32rpx 32rpx; /* 锯齿大小 */
  position: absolute;
  left: 0;
  z-index: 1;
}

.receipt-edge.top {
  top: -16rpx;
  background-image: radial-gradient(circle at 16rpx 22rpx, transparent 16rpx, #fff 17rpx);
}

.receipt-edge.bottom {
  bottom: -16rpx;
  background-image: radial-gradient(circle at 16rpx -6rpx, transparent 16rpx, #fff 17rpx);
}

.receipt-content {
  background: #fff;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.receipt-header {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 40rpx;
  border-bottom: 2rpx dashed #E2E8F0;
  padding-bottom: 20rpx;
}

.receipt-label {
  font-size: 24rpx;
  font-weight: 800;
  color: var(--clay-text-light);
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.receipt-time {
  font-size: 24rpx;
  color: var(--clay-text-light);
  font-family: monospace;
}

.pickup-code-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.code-label {
  display: block;
  font-size: 24rpx;
  color: var(--clay-text-light);
  margin-bottom: 8rpx;
}

.pickup-code {
  font-size: 64rpx;
  font-weight: 900;
  color: var(--clay-text-main);
  letter-spacing: 8rpx;
  font-family: monospace;
}

.book-preview {
  width: 100%;
  text-align: center;
}

.book-preview .book-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--clay-text-main);
}

.more-count {
  font-size: 24rpx;
  color: var(--clay-text-light);
  margin-left: 8rpx;
}


/* --------------------------------------- */
/* 2. 待支付卡片 (Urgency Card)           */
/* --------------------------------------- */
.urgency-card {
  background: #fff;
  border-radius: var(--radius-l);
  box-shadow: var(--shadow-clay-out);
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

/* 左侧红色装饰条，改为柔和的圆角矩形 */
.urgency-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 40rpx;
  bottom: 40rpx;
  width: 12rpx;
  background: #FF6B6B;
  border-radius: 0 12rpx 12rpx 0;
}

.urgency-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-left: 24rpx; /* 给装饰条留空 */
}

.status-badge.error {
  background: #FFE2E2;
  color: #FF6B6B;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 800;
}

.urgency-time {
  font-size: 24rpx;
  color: #FF6B6B;
  font-weight: 700;
}

.card-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 24rpx;
}

.book-info-row {
  display: flex;
  align-items: center;
  flex: 1;
}

.mini-cover {
  width: 100rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  background: #f0f0f0;
  object-fit: cover;
  box-shadow: 4rpx 4rpx 12rpx rgba(0,0,0,0.1);
}

.info-col {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.info-col .book-title {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--clay-text-main);
  margin-bottom: 12rpx;
  line-height: 1.3;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.info-col .order-total {
  font-size: 40rpx;
  font-weight: 900;
  color: var(--clay-text-main);
  letter-spacing: -1rpx;
}

.pay-btn-small {
  background: var(--clay-text-main);
  color: #fff;
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-weight: 800;
  margin-left: 24rpx;
  box-shadow: 8rpx 8rpx 16rpx rgba(74, 85, 104, 0.3);
  border: none;
}


/* --------------------------------------- */
/* 3. 历史卡片 (History Card)             */
/* --------------------------------------- */
.history-card {
  background: var(--clay-card-bg);
  border-radius: var(--radius-l);
  box-shadow: var(--shadow-clay-out); /* 标准凸起 */
  padding: 32rpx;
  opacity: 0.9; /* 稍微淡一点表示过去 */
}

.history-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
  font-size: 24rpx;
}

.order-date {
  color: var(--clay-text-light);
}

.status-text.success { color: #48BB78; font-weight: 700; }
.status-text.gray { color: var(--clay-text-light); font-weight: 600; }

.history-body {
  display: flex;
  align-items: center;
}

.mini-cover-sm {
  width: 64rpx;
  height: 80rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
  background: #f0f0f0;
  filter: grayscale(0.5); /* 历史图片稍微灰度 */
  object-fit: cover;
}

.history-info {
  display: flex;
  flex-direction: column;
}

.book-title-sm {
  font-size: 26rpx;
  color: var(--clay-text-main);
  font-weight: 600;
  margin-bottom: 4rpx;
}

.total-price-sm {
  font-size: 26rpx;
  color: var(--clay-text-light);
  font-weight: 700;
}


/* 状态消息 */
.empty-state, .loading-indicator, .error-message { 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center; 
  color: var(--clay-text-light); 
  padding: var(--space-xl) 0; 
  font-size: var(--font-size-body);
}

.empty-img {
  width: 300rpx;
  margin-bottom: var(--space-m);
  opacity: 0.8;
}

.empty-text {
  display: block;
  margin-bottom: var(--space-l);
  font-weight: 700;
}

.go-market-btn {
  display: inline-block;
  padding: 16rpx 40rpx;
  background: #fff;
  border-radius: 40rpx;
  color: var(--clay-text-main);
  font-weight: 700;
  box-shadow: var(--shadow-clay-out);
}
