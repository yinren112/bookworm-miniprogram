page {
  background: var(--color-bg-soft);
}

.profile-container {
  padding: 0;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
  position: relative;
}



.profile-content {
  padding: 0 var(--space-8);
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
  padding-bottom: 120rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-4);
  padding: 60rpx 0 var(--space-8);
}

.phone-auth-container {
  width: 80%;
  margin-top: 32rpx;
}

.avatar-wrapper {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 8rpx solid var(--color-bg-card);
  overflow: hidden;
  background: var(--color-bg-card);
  box-sizing: border-box;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
}

.username {
  font-size: 56rpx;
  font-weight: 800;
  color: var(--color-text-main);
  margin-top: var(--space-2);
}

.review-entry-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.review-entry-content {
  display: flex;
  align-items: center;
  gap: var(--space-5);
  overflow: hidden;
  flex: 1;
}

.review-icon-wrapper {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  border: var(--border-thick) solid var(--color-bg-highlight-green);
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-bg-highlight-green);
  box-sizing: border-box;
  flex: 0 0 auto;
}

.review-icon {
  width: 48rpx;
  height: 48rpx;
}

.review-text-wrapper {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
  overflow: hidden;
}

.review-title {
  font-size: 34rpx;
  font-weight: 900;
  color: var(--color-text-main);
}

.review-desc {
  font-size: 26rpx;
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.menu-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
  flex: 0 0 auto;
}

.reminder-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-4);
  padding: var(--space-2) 0;
}

.menu-content {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  flex: 1;
  overflow: hidden;
  margin-right: var(--space-2);
}

.menu-content-row {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  flex: 1;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 0;
  border-bottom: var(--border-thin) solid var(--color-bg-soft);
  width: 100%;
  background: transparent;
  box-sizing: border-box;
  text-align: left;
}

.menu-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.menu-item:first-child {
  padding-top: 0;
}

.icon-image {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.8;
}

.menu-text {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--color-text-main);
}

.support-info {
  text-align: center;
  color: var(--color-text-muted);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  padding: var(--space-4) 0;
}

/* Missing styles restored */
.reminder-action {
  flex: 0 0 auto;
  align-self: center;
}

.menu-sub {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-4);
}

.title-text {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

/* Remove button default styles */
button.menu-item {
  line-height: 1.5;
  margin: 0;
  border-radius: 0;
  padding-left: 0;
  padding-right: 0;
  background-color: transparent;
}

button.menu-item::after {
  border: none;
}
