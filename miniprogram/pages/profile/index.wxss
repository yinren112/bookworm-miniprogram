/* pages/profile/index.wxss */

/* Profile Container */
.profile-container {
  min-height: 100vh;
  background-color: var(--clay-bg);
  padding: var(--space-l);
}

/* Header Section (User Card) */
.header {
  padding: var(--space-xl) var(--space-l);
  text-align: center;
  background: var(--clay-card-bg);
  margin-bottom: var(--space-l);
  border-radius: var(--radius-l);
  box-shadow: var(--shadow-clay-out);
  /* 加上一点微弱的渐变增强质感 */
  background: linear-gradient(145deg, #ffffff, #f0f0f0);
}

/* Avatar - 悬浮球体感 */
.avatar-wrapper {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 0 auto var(--space-m) auto;
  overflow: hidden;
  background: #fff;
  border: 8rpx solid #fff;
  box-shadow: var(--shadow-clay-out);
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* Typography */
.username {
  display: block;
  font-size: 40rpx;
  font-weight: 800;
  color: var(--clay-text-main);
  margin-bottom: var(--space-xs);
  letter-spacing: -1rpx;
}

.nickname {
  display: block;
  font-size: var(--font-size-body);
  color: var(--clay-text-light);
  font-weight: 600;
}

/* Auth Button - Clay Style */
.auth-phone-button {
  margin-top: var(--space-l);
  background: var(--clay-text-main);
  color: #fff;
  border-radius: var(--radius-m);
  font-weight: bold;
  box-shadow: 8rpx 8rpx 16rpx rgba(74, 85, 104, 0.3);
  border: none;
  transition: transform 0.1s;
}

.auth-phone-button:active {
  transform: scale(0.98);
  box-shadow: inset 4rpx 4rpx 8rpx rgba(0,0,0,0.2);
}

/* Menu Card - The Clay Surface */
.menu-card {
  background: var(--clay-card-bg);
  border-radius: var(--radius-l);
  margin-bottom: var(--space-l);
  box-shadow: var(--shadow-clay-out);
  overflow: hidden;
  padding: var(--space-s) 0;
}

/* Menu Items */
.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-m) var(--space-l);
  background: transparent;
  border: none;
  transition: background-color 0.2s;
  position: relative;
}

/* 移除原来的线条，用空间区分，或者用更柔和的线条 */
.menu-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: var(--space-l);
  right: var(--space-l);
  height: 2rpx;
  background: #f0f0f0;
}

.menu-item:last-child::after {
  display: none;
}

.menu-item:active {
  background-color: #f7fafc;
}

/* Menu Text */
.menu-text {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--clay-text-main);
}

/* Arrow Icon */
.menu-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
}

/* Share Button Reset */
.share-button {
  background: transparent !important;
  border: none !important;
  text-align: left !important;
  padding: var(--space-m) var(--space-l) !important;
  margin: 0 !important;
  font-size: 30rpx !important;
  width: 100% !important;
  color: var(--clay-text-main) !important;
  font-weight: 700 !important;
  display: flex !important;
  justify-content: space-between !important;
  align-items: center !important;
  border-radius: 0 !important;
  line-height: normal !important;
}

.share-button::after {
  border: none !important;
  background: none !important;
  /* Re-add the separator line for the button */
  content: '';
  position: absolute;
  bottom: 0;
  left: var(--space-l);
  right: var(--space-l);
  height: 2rpx;
  background: #f0f0f0;
  width: auto !important;
  transform: none !important;
  border-radius: 0 !important;
}

/* Staff Section - Special Clay Card */
.staff-section {
  background: #E2F0CB; /* Pastel Green/Purple from reference */
  color: var(--clay-text-main);
  position: relative;
  overflow: hidden;
}

.staff-section .menu-text {
  color: #2c5f2d;
}

.staff-section .section-title {
  padding: var(--space-m) var(--space-l);
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid rgba(0,0,0,0.05);
}

.staff-section .title-text {
  font-weight: 800;
  font-size: 32rpx;
  color: #2c5f2d;
}

.staff-badge {
  background: rgba(255,255,255,0.6);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #2c5f2d;
  font-weight: 800;
  box-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
}

/* Support Info - Inset Effect */
.support-info {
  margin-bottom: var(--space-xl);
  padding: var(--space-l);
  font-size: 24rpx;
  color: var(--clay-text-light);
  line-height: 1.8;
  background: var(--clay-bg); /* Match bg */
  border-radius: var(--radius-m);
  /* Inset shadow for "sunk" effect */
  box-shadow: var(--shadow-clay-in);
  text-align: center;
  font-weight: 600;
}

.support-info text {
  display: block;
}

/* Icon Text for Staff Menu */
.icon-text {
  margin-right: 16rpx;
  font-size: 36rpx;
}

.menu-content {
  display: flex;
  align-items: center;
}
