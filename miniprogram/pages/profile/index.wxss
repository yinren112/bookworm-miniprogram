/* pages/profile/index.wxss */

/* Profile Container */
.profile-container {
  min-height: 100vh;
}

/* Header Section */
.header {
  padding: var(--space-xl) var(--space-l) var(--space-xl) var(--space-l);
  text-align: center;
  background: var(--card-background);
  margin: 0 var(--space-l) var(--space-l) var(--space-l);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* Simple Avatar */
.avatar-wrapper {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 0 auto var(--space-m) auto;
  overflow: hidden;
  background: var(--border-color);
}

.avatar-wrapper open-data {
  border-radius: 50%;
  overflow: hidden;
  width: 100%;
  height: 100%;
  display: block;
}

/* Typography */
.username {
  display: block;
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: var(--space-xs);
}

.nickname {
  display: block;
  font-size: var(--font-size-body);
  color: var(--text-secondary);
  font-weight: var(--font-weight-normal);
}

/* Menu Card */
.menu-card {
  background: var(--card-background);
  border-radius: 24rpx;
  margin: 0 var(--space-l) var(--space-l) var(--space-l);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* Simple Menu Items */
.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-l);
  border-bottom: 1rpx solid var(--border-color);
  background: transparent;
  border: none;
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: var(--background-color);
}

/* Menu Text */
.menu-text {
  font-size: var(--font-size-body);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
}

/* Arrow Icon */
.menu-arrow {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.5;
}

/* Share Button - Simple Override */
.share-button {
  background: transparent !important;
  border: none !important;
  text-align: left !important;
  padding: var(--space-l) !important;
  margin: 0 !important;
  font-size: var(--font-size-body) !important;
  width: 100% !important;
  color: var(--text-primary) !important;
  font-weight: var(--font-weight-bold) !important;
  display: flex !important;
  justify-content: space-between !important;
  align-items: center !important;
  border-bottom: 1rpx solid var(--border-color) !important;
  border-radius: 0 !important;
}

.share-button::after {
  border: none !important;
  background: none !important;
}

.share-button:active {
  background-color: var(--background-color) !important;
}

/* Support Info */
.support-info {
  margin: 0 var(--space-l) var(--space-xl) var(--space-l);
  padding: var(--space-l);
  font-size: var(--font-size-caption);
  color: var(--text-secondary);
  line-height: 1.6;
  background: var(--card-background);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.support-info text {
  display: block;
  margin-bottom: var(--space-xs);
}

.support-info text:last-child {
  margin-bottom: 0;
}

/* Responsive Design */
@media screen and (min-width: 768px) {
  .profile-container {
    max-width: 600rpx;
    margin: 0 auto;
  }
  
  .header {
    padding: var(--space-xl);
  }
  
  .avatar-wrapper {
    width: 240rpx;
    height: 240rpx;
  }
}