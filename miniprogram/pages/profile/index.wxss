page {
  background: var(--color-bg-soft);
}

.profile-container {
  padding: 0;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
  position: relative;
}

/* Green header background */
.profile-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 360rpx;
  background: var(--color-bg-highlight-green);
  z-index: 0;
}

.profile-content {
  padding: 0 var(--space-8);
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-4);
  padding: var(--space-8) 0;
}

.avatar-wrapper {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 6rpx solid var(--color-bg-card);
  overflow: hidden;
  background: var(--color-bg-card);
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.username {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--color-text-main);
}

.review-entry-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.review-entry-content {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  overflow: hidden;
}

.review-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  border: var(--border-thick) solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-bg-card);
  box-sizing: border-box;
  flex: 0 0 auto;
}

.review-icon {
  width: 40rpx;
  height: 40rpx;
}

.review-text-wrapper {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  overflow: hidden;
}

.review-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.review-desc {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
}

.menu-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.45;
  flex: 0 0 auto;
}

.reminder-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-4);
}

.menu-content {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  flex: 1;
  overflow: hidden;
  margin-right: var(--space-2);
}

.reminder-action {
  flex: 0 0 auto;
  align-self: center;
}

.menu-text {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.menu-sub {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-light);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-4);
}

.title-text {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-heavy);
  color: var(--color-text-main);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0;
  border-bottom: var(--border-thick) solid var(--color-border);
  width: 100%;
  background: transparent;
  box-sizing: border-box;
  text-align: left;
}

/* Remove button default styles */
button.menu-item {
  line-height: 1.5;
  margin: 0;
  border-radius: 0;
  padding-left: 0;
  padding-right: 0;
}

button.menu-item::after {
  border: none;
}

.menu-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.menu-item:first-child {
  padding-top: 0;
}

.icon-image {
  width: 36rpx;
  height: 36rpx;
  margin-right: var(--space-3);
}

.support-info {
  text-align: center;
  color: var(--color-text-muted);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  padding: var(--space-4) 0;
}
