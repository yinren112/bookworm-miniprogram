/* pages/acquisition-scan/index.wxss */

.container {
  padding: var(--space-l);
  padding-bottom: 200rpx;
  min-height: 100vh;
  background: var(--clay-bg-gradient);
}

/* Header */
.header {
  margin-bottom: var(--space-xl);
  text-align: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: 900;
  color: var(--clay-text-main);
  display: block;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: var(--clay-text-light);
}

/* Scan Button (Big Clay Button) */
.scan-button {
  background: var(--clay-card-bg);
  height: 120rpx;
  border-radius: var(--radius-xl);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--space-xl);
  box-shadow: var(--shadow-clay-out);
  border: none;
  transition: transform 0.1s;
}

.scan-button:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-clay-in);
}

.scan-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.scan-text {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--primary-color);
}

/* Scanned List */
.scanned-list {
  margin-bottom: var(--space-xl);
}

.list-header {
  margin-bottom: var(--space-m);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.clear-btn {
  font-size: 24rpx;
  color: #E53E3E;
  font-weight: 700;
  padding: 8rpx 16rpx;
  background: #FFF5F5;
  border-radius: 20rpx;
}

.list-title {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--clay-text-light);
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* Book Item Card - Compact Mode */
.book-item {
  background: var(--clay-card-bg);
  border-radius: var(--radius-m);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-clay-out);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

/* Compact Mode Styles */
.scanned-list.compact .book-item {
  padding: 20rpx;
  margin-bottom: 16rpx;
  border-radius: var(--radius-s);
}

.scanned-list.compact .book-title {
  font-size: 26rpx;
  margin-bottom: 4rpx;
}

.scanned-list.compact .book-author, 
.scanned-list.compact .book-edition {
  font-size: 22rpx;
  display: inline-block;
  margin-right: 16rpx;
}

.scanned-list.compact .status-badge {
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  margin-top: 0;
  margin-left: 16rpx;
}

.scanned-list.compact .remove-button {
  padding: 8rpx 16rpx;
  font-size: 22rpx;
}

/* Compact Header Layout */
.scanned-list.compact .book-header {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
}

.book-item.rejected {
  opacity: 0.7;
  background: #FFF5F5;
}

.book-item.rejected::before {
  content: '';
  position: absolute;
  left: 0; top: 0; bottom: 0;
  width: 8rpx;
  background: #FC8181;
}

.book-info {
  flex: 1;
  margin-right: 24rpx;
}

.book-title {
  font-size: 30rpx;
  font-weight: 800;
  color: var(--clay-text-main);
  margin-bottom: 8rpx;
  display: block;
}

.book-author, .book-edition {
  font-size: 24rpx;
  color: var(--clay-text-light);
  display: block;
  margin-bottom: 4rpx;
}

.status-badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 700;
  margin-top: 8rpx;
}

.status-badge.acquirable {
  background: #C6F6D5;
  color: #22543D;
}

.status-badge.rejected {
  background: #FED7D7;
  color: #822727;
}

.remove-button {
  background: #FED7D7;
  color: #C53030;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-weight: 700;
  margin: 0;
  box-shadow: none;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 60rpx;
  color: var(--clay-text-light);
}

.empty-img {
  width: 300rpx;
  margin-bottom: var(--space-m);
  opacity: 0.8;
}

.empty-text {
  display: block;
  margin-bottom: 8rpx;
  font-weight: 700;
}

.empty-hint {
  font-size: 24rpx;
  opacity: 0.8;
}

/* Summary Section */
.summary-section {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border-radius: var(--radius-l) var(--radius-l) 0 0;
  padding: var(--space-l);
  box-shadow: 0 -10rpx 40rpx rgba(0,0,0,0.05);
  position: fixed;
  bottom: 0; left: 0; right: 0;
  z-index: 100;
  max-height: 80vh;
  overflow-y: auto;
}

/* Mode Switcher (Segmented Control) */
.mode-switcher {
  display: flex;
  background: var(--clay-bg);
  padding: 8rpx;
  border-radius: var(--radius-m);
  box-shadow: var(--shadow-clay-in);
  margin-bottom: var(--space-l);
}

/* Scan Mode Switch */
.scan-mode-switch {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 20rpx 32rpx;
  border-radius: var(--radius-m);
  box-shadow: var(--shadow-clay-out);
  margin-bottom: var(--space-l);
}

.switch-label {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--clay-text-main);
}

.mode-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  font-weight: 700;
  color: var(--clay-text-light);
  border-radius: var(--radius-s);
  transition: all 0.2s;
}

.mode-tab.active {
  background: #fff;
  color: var(--primary-color);
  box-shadow: 2rpx 2rpx 6rpx rgba(0,0,0,0.1);
}

/* Input Rows */
.input-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.input-label {
  width: 200rpx;
  font-size: 26rpx;
  color: var(--clay-text-main);
  font-weight: 700;
}

/* Clay Inputs (Inset) */
.text-input, .number-input, .picker-display {
  flex: 1;
  height: 80rpx;
  background: var(--clay-bg);
  border-radius: var(--radius-m);
  padding: 0 24rpx;
  font-size: 28rpx;
  color: var(--clay-text-main);
  box-shadow: var(--shadow-clay-in);
  display: flex;
  align-items: center;
}

.picker-display {
  color: var(--clay-text-main);
}

/* Individual Pricing Items */
.individual-pricing {
  max-height: 400rpx;
  overflow-y: auto;
  margin-bottom: var(--space-m);
}

/* Batch Toolbar */
.batch-toolbar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  background: var(--clay-bg);
  padding: 16rpx;
  border-radius: var(--radius-m);
  box-shadow: var(--shadow-clay-in);
}

.batch-input {
  flex: 1;
  height: 64rpx;
  background: #fff;
  border-radius: var(--radius-s);
  padding: 0 16rpx;
  font-size: 24rpx;
  color: var(--clay-text-main);
}

.batch-btn {
  background: var(--clay-text-main);
  color: #fff;
  font-size: 22rpx;
  font-weight: 700;
  padding: 0 24rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: var(--radius-s);
  margin: 0;
}

.pricing-item {
  background: #fff;
  padding: 20rpx;
  border-radius: var(--radius-m);
  margin-bottom: 16rpx;
  border: 2rpx solid #f0f0f0;
}

.pricing-book-title {
  font-size: 26rpx;
  font-weight: 700;
  display: block;
}

.pricing-controls {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.condition-picker {
  flex: 1;
}

.condition-picker .picker-display {
  height: 64rpx;
  font-size: 24rpx;
}

.price-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: var(--clay-bg);
  border-radius: var(--radius-m);
  box-shadow: var(--shadow-clay-in);
  padding: 0 16rpx;
  height: 64rpx;
}

.price-prefix {
  color: var(--clay-text-light);
  margin-right: 8rpx;
  font-size: 24rpx;
}

.price-input {
  flex: 1;
  height: 100%;
  font-size: 26rpx;
  font-weight: 700;
  color: var(--primary-color);
}

/* Confirm Button */
.confirm-btn {
  background: var(--primary-color);
  color: #fff;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 800;
  margin-top: var(--space-l);
  box-shadow: 0 8rpx 20rpx rgba(72, 187, 120, 0.4);
}
