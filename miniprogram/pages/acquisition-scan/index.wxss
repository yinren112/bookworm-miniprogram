/* pages/acquisition-scan/index.wxss */

/* 页面容器 */
.container {
  padding: var(--space-l);
  padding-bottom: calc(var(--space-xl) * 2);
  min-height: 100vh;
  background-color: var(--background-color);
}

/* 页面头部 */
.header {
  text-align: center;
  margin-bottom: var(--space-xl);
}

.header-title {
  display: block;
  font-size: var(--font-size-display);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: var(--space-xs);
}

.header-subtitle {
  display: block;
  font-size: var(--font-size-body);
  color: var(--text-secondary);
}

/* 扫码按钮 */
.scan-button {
  width: 100%;
  padding: var(--space-xl);
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  color: white;
  border-radius: var(--border-radius);
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--space-l);
  box-shadow: 0 4px 12px rgba(44, 95, 45, 0.15);
  transition: all 0.2s;
}

.scan-button:active {
  transform: scale(0.98);
  box-shadow: 0 2px 6px rgba(44, 95, 45, 0.2);
}

.scan-icon {
  font-size: 48rpx;
  margin-bottom: var(--space-s);
}

.scan-text {
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
}

/* 书籍列表 */
.scanned-list {
  margin-bottom: var(--space-l);
}

.list-header {
  margin-bottom: var(--space-m);
}

.list-title {
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
}

/* 书籍项 */
.book-item {
  background-color: white;
  border-radius: var(--border-radius);
  padding: var(--space-m);
  margin-bottom: var(--space-m);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  border-left: 4rpx solid transparent;
  transition: all 0.2s;
}

.book-item.acquirable {
  border-left-color: #4caf50;
  background-color: #f1f8f4;
}

.book-item.rejected {
  border-left-color: #f44336;
  background-color: #fef5f5;
}

.book-info {
  flex: 1;
}

.book-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--space-s);
  gap: var(--space-s);
}

.book-title {
  flex: 1;
  font-size: var(--font-size-body);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  line-height: 1.4;
}

.status-badge {
  padding: var(--space-xs) var(--space-s);
  border-radius: 8rpx;
  font-size: var(--font-size-caption);
  font-weight: var(--font-weight-bold);
  white-space: nowrap;
}

.status-badge.acquirable {
  background-color: #4caf50;
  color: white;
}

.status-badge.rejected {
  background-color: #f44336;
  color: white;
}

.book-author,
.book-edition {
  display: block;
  font-size: var(--font-size-caption);
  color: var(--text-secondary);
  margin-bottom: var(--space-xs);
}

/* 收购信息 */
.acquisition-info {
  margin-top: var(--space-m);
  padding-top: var(--space-m);
  border-top: 1px solid #e0e0e0;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-s);
  gap: var(--space-s);
}

.info-row .label {
  font-size: var(--font-size-body);
  color: var(--text-secondary);
  min-width: 100rpx;
}

.picker {
  flex: 1;
  padding: var(--space-s) var(--space-m);
  background-color: white;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
}

.picker-value {
  font-size: var(--font-size-body);
  color: var(--text-primary);
}

.price-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: white;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: var(--space-s) var(--space-m);
}

.currency {
  font-size: var(--font-size-body);
  color: var(--text-secondary);
  margin-right: var(--space-xs);
}

.price-input {
  flex: 1;
  font-size: var(--font-size-body);
  color: var(--text-primary);
  border: none;
  outline: none;
}

.suggested-price {
  font-size: var(--font-size-caption);
  color: var(--text-secondary);
  margin-left: var(--space-s);
  white-space: nowrap;
}

/* 拒绝原因 */
.rejection-reason {
  display: block;
  font-size: var(--font-size-caption);
  color: #f44336;
  margin-top: var(--space-s);
  padding: var(--space-s) var(--space-m);
  background-color: #ffebee;
  border-radius: 8rpx;
}

/* 书籍操作按钮 */
.book-actions {
  margin-top: var(--space-m);
  display: flex;
  justify-content: flex-end;
}

.remove-button {
  padding: var(--space-xs) var(--space-m);
  background-color: transparent;
  color: #f44336;
  border: 1px solid #f44336;
  border-radius: 8rpx;
  font-size: var(--font-size-caption);
}

.remove-button:active {
  background-color: #ffebee;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: calc(var(--space-xl) * 3) var(--space-l);
}

.empty-icon {
  display: block;
  font-size: 96rpx;
  margin-bottom: var(--space-l);
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  color: var(--text-secondary);
  margin-bottom: var(--space-s);
}

.empty-hint {
  display: block;
  font-size: var(--font-size-body);
  color: var(--text-secondary);
  opacity: 0.7;
}

/* 汇总信息 */
.summary-section {
  background-color: white;
  border-radius: var(--border-radius);
  padding: var(--space-l);
  margin-bottom: var(--space-l);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-s);
}

.summary-row:last-child {
  margin-bottom: 0;
}

.summary-row.total {
  padding-top: var(--space-m);
  border-top: 2px solid var(--border-color);
  margin-top: var(--space-s);
}

.summary-label {
  font-size: var(--font-size-body);
  color: var(--text-secondary);
}

.summary-value {
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
}

.summary-value.highlight {
  color: var(--primary-color);
  font-size: var(--font-size-display);
}

/* 输入行 */
.input-row {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-m);
  gap: var(--space-s);
}

.input-label {
  font-size: var(--font-size-body);
  color: var(--text-secondary);
  min-width: 140rpx;
  flex-shrink: 0;
}

.text-input,
.number-input {
  flex: 1;
  padding: var(--space-s) var(--space-m);
  background-color: #f5f5f5;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  font-size: var(--font-size-body);
  color: var(--text-primary);
}

/* 提交按钮 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: var(--space-l);
  background-color: white;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.06);
}

.submit-button {
  width: 100%;
  padding: var(--space-l);
  background-color: var(--primary-color);
  color: white;
  border-radius: var(--border-radius);
  border: none;
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  box-shadow: 0 4px 12px rgba(44, 95, 45, 0.2);
  transition: all 0.2s;
}

.submit-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-button[disabled] {
  background-color: #cccccc;
  color: #666666;
  box-shadow: none;
  opacity: 0.6;
}
