/* pages/order-detail/index.wxss */
.container {
  background-color: var(--background-color);
  min-height: 100vh;
  padding-bottom: var(--space-xl);
}

/* Loading & Error States */
.loading-container,
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-text,
.error-text {
  font-size: var(--font-size-title);
  color: var(--text-secondary);
  margin-bottom: var(--space-xl);
}

.retry-btn {
  background-color: var(--primary-color);
  color: white;
  border-radius: 8rpx;
  padding: var(--space-m) var(--space-xl);
  font-size: var(--font-size-body);
}

/* Section Base Styles - Use Global Card */
.fulfillment-section,
.books-section,
.order-info-section {
  margin: var(--space-m) var(--space-l);
  background-color: var(--card-background);
  border-radius: 24rpx;
  padding: var(--space-l);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: var(--space-m);
}

/* Fulfillment Section */
.status-header {
  text-align: center;
  margin-bottom: var(--space-l);
}

.status-text {
  font-size: var(--font-size-display);
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
}

.pickup-code-container {
  text-align: center;
  margin-bottom: var(--space-l);
  padding: var(--space-m);
  background-color: var(--background-color);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-s);
}

.pickup-code-label {
  font-size: var(--font-size-body);
  color: var(--text-secondary);
  margin-bottom: var(--space-s);
}

.pickup-code {
  font-size: 72rpx;
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
  font-family: 'Courier New', monospace;
  letter-spacing: 8rpx;
}

.pickup-details {
  border-top: 1rpx solid var(--border-color);
  padding-top: var(--space-m);
}

.pickup-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-s);
}

.pickup-item:last-child {
  margin-bottom: 0;
}

.pickup-label {
  font-size: var(--font-size-body);
  color: var(--text-secondary);
}

.pickup-value {
  font-size: var(--font-size-body);
  color: var(--text-primary);
  font-weight: var(--font-weight-bold);
}

/* Books Section */
.book-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-m);
}

.book-item {
  display: flex;
  align-items: flex-start;
  gap: var(--space-m);
  padding: var(--space-m);
  background-color: var(--background-color);
  border-radius: 12rpx;
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  flex-shrink: 0;
}

.cover-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.cover-placeholder {
  width: 100%;
  height: 100%;
  background-color: var(--border-color);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cover-placeholder-text {
  font-size: var(--font-size-caption);
  color: var(--text-secondary);
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.book-title {
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  line-height: 1.4;
}

.book-author,
.book-edition,
.book-condition {
  font-size: var(--font-size-caption);
  color: var(--text-secondary);
  line-height: 1.3;
}

.book-price {
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
  align-self: flex-start;
}

/* Order Info Section */
.order-info-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-s);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-s) 0;
}

.info-item.total-amount {
  border-top: 1rpx solid var(--border-color);
  padding-top: var(--space-m);
  margin-top: var(--space-s);
}

.info-label {
  font-size: var(--font-size-body);
  color: var(--text-secondary);
}

.info-value {
  font-size: var(--font-size-body);
  color: var(--text-primary);
  font-weight: var(--font-weight-bold);
}

.info-value.price {
  font-size: var(--font-size-title);
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
}