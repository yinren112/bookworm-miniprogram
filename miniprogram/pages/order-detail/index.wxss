/* pages/order-detail/index.wxss */

.page-container {
  min-height: 100vh;
  padding: var(--space-l);
  padding-bottom: 200rpx;
  background: var(--clay-bg-gradient);
  position: relative;
  overflow-x: hidden;
}

/* 1. Status Card (Hero) */
.status-card {
  background: #fff;
  border-radius: var(--radius-l);
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: var(--shadow-clay-out);
  margin-bottom: 40rpx;
}

.status-icon-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: var(--clay-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 32rpx;
  box-shadow: var(--shadow-clay-in);
}

.status-icon {
  font-size: 48rpx;
}

.status-main {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.status-title {
  font-size: 40rpx;
  font-weight: 900;
  color: var(--clay-text-main);
  margin-bottom: 8rpx;
}

.status-desc {
  font-size: 26rpx;
  color: var(--clay-text-light);
}

/* 2. Pickup Ticket (Ticket Style) */
.pickup-ticket {
  background: #fff;
  border-radius: var(--radius-l);
  box-shadow: var(--shadow-clay-out);
  margin-bottom: 40rpx;
  position: relative;
  overflow: hidden;
}

.ticket-header {
  background: #FAFAFA;
  padding: 24rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx dashed #E2E8F0;
}

.ticket-label {
  font-size: 26rpx;
  font-weight: 800;
  color: var(--clay-text-light);
  text-transform: uppercase;
}

.ticket-time {
  font-size: 24rpx;
  color: var(--clay-text-light);
  font-family: monospace;
}

.code-section {
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.code-label {
  font-size: 24rpx;
  color: var(--clay-text-light);
  margin-bottom: 16rpx;
}

.pickup-code {
  font-size: 80rpx;
  font-weight: 900;
  color: var(--primary-color);
  letter-spacing: 8rpx;
  margin-bottom: 32rpx;
  text-shadow: 2rpx 2rpx 0px #C6F6D5;
}

.copy-btn {
  background: var(--clay-text-main);
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 32rpx;
  border-radius: 24rpx;
  box-shadow: 4rpx 4rpx 10rpx rgba(74, 85, 104, 0.3);
  border: none;
}

/* Divider */
.ticket-divider {
  position: relative;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ticket-divider .line {
  width: 90%;
  border-top: 4rpx dashed #E2E8F0;
}

.half-circle {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background: var(--clay-bg); /* 默认背景色 */
  border-radius: 50%;
  top: 0;
  box-shadow: inset 2rpx 2rpx 4rpx rgba(0,0,0,0.05);
}

/* 使用 CSS 变量适配渐变背景 */
@supports (background: paint(something)) or (background: linear-gradient(#000, #fff)) {
  .half-circle {
    background: transparent; /* 设为透明以透出父级渐变 */
    box-shadow: none; /* 渐变背景下很难做内阴影，先去掉以免穿帮 */
  }
  /* 或者更暴力的做法：直接用伪元素遮挡 */
}

/* 修正方案：由于 half-circle 是用来遮挡 ticket 卡片制造缺口的，
   它的颜色必须和 page-container 的背景完全一致。
   既然 page-container 是渐变，half-circle 就很难单纯通过 background-color 匹配。
   
   更好的做法是：不要用遮挡法，而是用 mask-image (遮罩)。
   但小程序对 mask-image 支持度不一。
   
   退一步方案：让 half-circle 的背景也设为同样的 fixed 渐变！
*/
.half-circle {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background: var(--clay-bg-gradient); /* 使用全局渐变 */
  background-attachment: fixed;       /* 关键：固定背景，使其与页面背景对齐 */
  border-radius: 50%;
  top: 0;
  box-shadow: inset 2rpx 2rpx 4rpx rgba(0,0,0,0.05);
}

.half-circle.left { left: -20rpx; }
.half-circle.right { right: -20rpx; }

.ticket-info {
  padding: 40rpx;
  background: #fff;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-row:last-child { margin-bottom: 0; }

.info-row .label {
  font-size: 26rpx;
  color: var(--clay-text-light);
}

.info-row .value {
  font-size: 28rpx;
  color: var(--clay-text-main);
  font-weight: 700;
}

.info-row .highlight {
  color: #E53E3E;
}

/* 3. Books Card */
.books-card {
  background: #fff;
  border-radius: var(--radius-l);
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: var(--shadow-clay-out);
}

.card-title {
  font-size: 32rpx;
  font-weight: 900;
  color: var(--clay-text-main);
  margin-bottom: 32rpx;
}

.book-item {
  display: flex;
  align-items: center;
  padding-bottom: 32rpx;
  border-bottom: 2rpx solid #F7FAFC;
  margin-bottom: 32rpx;
}

.book-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.book-cover {
  width: 100rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  background: #f0f0f0;
  object-fit: cover;
  box-shadow: 4rpx 4rpx 8rpx rgba(0,0,0,0.1);
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
}

.book-title {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--clay-text-main);
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.book-author {
  font-size: 24rpx;
  color: var(--clay-text-light);
  margin-bottom: 16rpx;
}

.tags-row {
  display: flex;
  gap: 12rpx;
}

.clay-tag {
  background: var(--clay-bg);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: var(--clay-text-main);
  font-weight: 700;
}

.clay-tag.version {
  background: #E2E8F0;
  color: #4A5568;
}

.book-price {
  font-size: 32rpx;
  font-weight: 900;
  color: var(--clay-text-main);
}


/* 4. Meta Card (Inset) */
.meta-card {
  background: var(--clay-bg);
  border-radius: var(--radius-l);
  padding: 40rpx;
  box-shadow: var(--shadow-clay-in);
}

.meta-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.meta-row .label {
  font-size: 26rpx;
  color: var(--clay-text-light);
}

.meta-row .value {
  font-size: 26rpx;
  color: var(--clay-text-main);
  font-family: monospace;
}

.meta-row .copyable {
  text-decoration: underline;
  text-decoration-style: dotted;
}

.meta-divider {
  height: 2rpx;
  background: rgba(0,0,0,0.05);
  margin: 24rpx 0;
}

.meta-row.total .label {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--clay-text-main);
}

.meta-row.total .value {
  font-size: 40rpx;
  font-weight: 900;
  color: var(--primary-color);
}


/* Action Bar */
.action-bar {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  background: rgba(255,255,255,0.9);
  backdrop-filter: blur(20rpx);
  padding: 24rpx 40rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: flex-end;
}

.pay-btn {
  background: var(--primary-color);
  color: #fff;
  border-radius: 40rpx;
  padding: 0 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 800;
  box-shadow: 0 8rpx 20rpx rgba(72, 187, 120, 0.4);
  margin: 0;
}


/* Error/Loading */
.loading-container, .error-container {
  text-align: center;
  padding: 100rpx;
  color: var(--clay-text-light);
}

.error-icon { font-size: 60rpx; margin-bottom: 20rpx; }
.retry-btn {
  margin-top: 40rpx;
  background: #fff;
  border: 2rpx solid var(--clay-text-light);
  color: var(--clay-text-main);
  border-radius: 40rpx;
  font-size: 26rpx;
}
